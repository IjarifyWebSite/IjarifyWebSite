@model IjarifySystemBLL.ViewModels.AccountViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="auth-container">
    <div class="auth-card">

        <!-- Header -->
        <div class="auth-header">
            <div class="auth-icon">
                <i class="bi bi-person-circle"></i>
            </div>
            <h2>Welcome Back</h2>
            <p>Login to access your profile and manage your properties</p>
        </div>

        <!-- Login Form -->
        <form asp-action="Login" asp-controller="Account" method="post">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Username -->
            <div class="form-group">
                <label asp-for="UserName" class="form-label"></label>
                <input asp-for="UserName" class="form-control" placeholder="Enter your username or email" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <!-- Password -->
            <div class="form-group">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Remember Me -->
            <div class="form-check">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label"></label>
            </div>

            <!-- Submit -->
            <button type="submit" class="btn-primary">
                <i class="bi bi-box-arrow-in-right"></i>
                Login
            </button>

            <!-- Register Link -->
            <div class="auth-footer">
                <span>Don't have an account?</span>
                <a asp-action="Register" asp-controller="Account">Create one</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

