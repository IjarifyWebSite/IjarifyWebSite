@model IjarifySystemBLL.ViewModels.AccountViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Ijarify</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
</head>
<body>

    <div class="login-container">
        <!-- Left Side - Illustration -->
        <div class="login-illustration">
            <div class="illustration-content">
                <div class="brand-logo">
                    <i class="bi bi-building"></i>
                    <h1>Ijarify</h1>
                </div>
                <h2>Welcome Back</h2>
                <p>Discover your perfect property. Rent, buy, or sell with confidence.</p>

                <div class="illustration-image">
                    <div class="building-illustration">
                        <div class="building building-1"></div>
                        <div class="building building-2"></div>
                        <div class="building building-3"></div>
                        <div class="building building-4"></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Side - Login Form -->
        <div class="login-form-section">
            <div class="form-wrapper">
                <div class="back-link">
                    <a href="@Url.Action("Index", "Home")">
                        <i class="bi bi-arrow-left"></i> Back to Home
                    </a>
                </div>

                <div class="form-header">
                    <h2>Welcome Back!</h2>
                    <p>Login to continue to your account</p>
                </div>

                <form asp-action="Login" asp-controller="Account" method="post">
                    @Html.AntiForgeryToken()

                    @if (ViewData.ModelState.ErrorCount > 0)
                    {
                        <div class="alert alert-danger" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            <span asp-validation-summary="ModelOnly"></span>
                        </div>
                    }

                    <!-- Username -->
                    <div class="form-group">
                        <label asp-for="UserName">Username</label>
                        <div class="input-with-icon">
                            <i class="bi bi-person"></i>
                            <input asp-for="UserName"
                                   class="form-control"
                                   placeholder="Enter your username" />
                        </div>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <!-- Password -->
                    <div class="form-group">
                        <div class="label-with-forgot">
                            <label asp-for="Password">Password</label>
                        </div>
                        <div class="input-with-icon">
                            <i class="bi bi-lock"></i>
                            <input asp-for="Password"
                                   class="form-control"
                                   placeholder="Enter your password" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <!-- Remember Me -->
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">
                            Keep me signed in
                        </label>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn-login">
                        <span>Login</span>
                        <i class="bi bi-arrow-right"></i>
                    </button>

                    <!-- Divider -->
                    <div class="divider">
                        <span>or continue with</span>
                    </div>

                    <!-- Register Link -->
                    <div class="register-link">
                        <span>Don't have an account?</span>
                        <a asp-action="Register" asp-controller="Account">Create Account</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        overflow: hidden;
    }

    .login-container {
        display: flex;
        height: 100vh;
    }

    .login-illustration {
        flex: 1;
        background: linear-gradient(135deg, #2c7a7b 0%, #38b2ac 100%);
        color: white;
        padding: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        overflow: hidden;
    }

    .login-illustration::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        opacity: 0.3;
    }

    .illustration-content {
        position: relative;
        z-index: 1;
        max-width: 500px;
        text-align: center;
    }

    .brand-logo {
        display: inline-flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 40px;
        background: rgba(255, 255, 255, 0.1);
        padding: 20px 35px;
        border-radius: 16px;
        backdrop-filter: blur(10px);
    }

    .brand-logo i {
        font-size: 42px;
    }

    .brand-logo h1 {
        font-size: 32px;
        font-weight: 800;
        margin: 0;
    }

    .illustration-content h2 {
        font-size: 38px;
        font-weight: 700;
        margin-bottom: 20px;
        line-height: 1.2;
    }

    .illustration-content > p {
        font-size: 17px;
        opacity: 0.9;
        margin-bottom: 60px;
        line-height: 1.6;
        max-width: 400px;
        margin-left: auto;
        margin-right: auto;
    }

    .building-illustration {
        display: flex;
        align-items: flex-end;
        justify-content: center;
        gap: 15px;
        height: 200px;
        margin-top: 40px;
    }

    .building {
        background: rgba(255, 255, 255, 0.15);
        border-radius: 8px 8px 0 0;
        position: relative;
        backdrop-filter: blur(5px);
        animation: buildingFloat 3s ease-in-out infinite;
    }

    .building::before {
        content: '';
        position: absolute;
        top: 10px;
        left: 10px;
        right: 10px;
        bottom: 10px;
        background: linear-gradient(to bottom, rgba(255, 255, 255, 0.1) 0%, rgba(255, 255, 255, 0.05) 20%, transparent 20%, transparent 40%, rgba(255, 255, 255, 0.05) 40%, transparent 60%, rgba(255, 255, 255, 0.05) 60%, transparent 80%, rgba(255, 255, 255, 0.05) 80%);
    }

    .building-1 {
        width: 60px;
        height: 140px;
        animation-delay: 0s;
    }

    .building-2 {
        width: 70px;
        height: 180px;
        animation-delay: 0.5s;
    }

    .building-3 {
        width: 65px;
        height: 160px;
        animation-delay: 1s;
    }

    .building-4 {
        width: 55px;
        height: 130px;
        animation-delay: 1.5s;
    }

    @@keyframes buildingFloat {
        0%, 100%{
            transform: translateY(0);
        }
        50% {
            transform: translateY(-10px);
        }
    }

    .login-form-section {
        flex: 1;
        background: #ffffff;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px;
        overflow-y: auto;
    }

    .form-wrapper {
        width: 100%;
        max-width: 450px;
    }

    .back-link {
        margin-bottom: 30px;
    }

    .back-link a {
        color: #64748b;
        text-decoration: none;
        font-size: 14px;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        transition: color 0.2s;
    }

    .back-link a:hover {
        color: #2c7a7b;
    }

    .form-header {
        margin-bottom: 35px;
    }

    .form-header h2 {
        font-size: 32px;
        font-weight: 700;
        color: #0f172a;
        margin-bottom: 8px;
    }

    .form-header p {
        color: #64748b;
        font-size: 15px;
    }

    .form-group {
        margin-bottom: 24px;
    }

    .form-group label {
        display: block;
        font-weight: 600;
        color: #334155;
        margin-bottom: 8px;
        font-size: 14px;
    }

    .label-with-forgot {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 8px;
    }

    .forgot-link {
        color: #2c7a7b;
        text-decoration: none;
        font-size: 13px;
        font-weight: 600;
    }

    .forgot-link:hover {
        text-decoration: underline;
    }

    .input-with-icon {
        position: relative;
    }

    .input-with-icon i {
        position: absolute;
        left: 14px;
        top: 50%;
        transform: translateY(-50%);
        color: #94a3b8;
        font-size: 18px;
    }

    .input-with-icon .form-control {
        padding-left: 45px;
    }

    .form-control {
        width: 100%;
        padding: 13px 16px;
        border: 2px solid #e2e8f0;
        border-radius: 12px;
        font-size: 15px;
        transition: all 0.2s;
        background: #f8fafc;
    }

    .form-control:focus {
        outline: none;
        border-color: #2c7a7b;
        background: #ffffff;
        box-shadow: 0 0 0 4px rgba(44, 122, 123, 0.1);
    }

    .form-check {
        margin-bottom: 24px;
        display: flex;
        align-items: center;
    }

    .form-check-input {
        width: 18px;
        height: 18px;
        border: 2px solid #cbd5e1;
        border-radius: 4px;
        cursor: pointer;
    }

    .form-check-input:checked {
        background-color: #2c7a7b;
        border-color: #2c7a7b;
    }

    .form-check-label {
        margin-left: 8px;
        font-size: 14px;
        color: #475569;
        cursor: pointer;
    }

    .btn-login {
        width: 100%;
        padding: 14px;
        background: linear-gradient(135deg, #38b2ac 0%, #2c7a7b 100%);
        color: white;
        border: none;
        border-radius: 12px;
        font-size: 16px;
        font-weight: 600;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        cursor: pointer;
        transition: all 0.3s;
        box-shadow: 0 4px 14px rgba(44, 122, 123, 0.3);
    }

    .btn-login:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(44, 122, 123, 0.4);
    }

    .btn-login:active {
        transform: translateY(0);
    }

    .divider {
        margin: 30px 0;
        text-align: center;
        position: relative;
    }

    .divider::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 0;
        right: 0;
        height: 1px;
        background: #e2e8f0;
    }

    .divider span {
        background: white;
        padding: 0 15px;
        color: #94a3b8;
        font-size: 13px;
        position: relative;
        z-index: 1;
    }
    .register-link {
        text-align: center;
        font-size: 14px;
        color: #64748b;
    }

    .register-link a {
        color: #2c7a7b;
        text-decoration: none;
        font-weight: 600;
        margin-left: 5px;
    }

    .register-link a:hover {
        text-decoration: underline;
    }

    .alert {
        border-radius: 12px;
        padding: 12px 16px;
        margin-bottom: 20px;
        border: none;
        background: #fee2e2;
        color: #dc2626;
        font-size: 14px;
    }

    .text-danger {
        color: #dc2626;
        font-size: 13px;
        margin-top: 4px;
        display: block;
    }

    @@media (max-width: 992px) {
        .login-illustration{
            display: none;
        }

        .login-form-section {
            flex: 1;
        }
    }

    @@media (max-width: 576px) {
        .login-form-section
        {
            padding: 30px 20px;
        }

        .form-header h2 {
            font-size: 28px;
        }

        .social-login {
            grid-template-columns: 1fr;
        }
    }
</style>
