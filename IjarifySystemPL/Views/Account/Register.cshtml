@model IjarifySystemBLL.ViewModels.AccountViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register - Ijarify";
}

<!-- Google Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

<div class="register-wrapper">
    <div class="register-container">

        <!-- Left Hero Section -->
        <div class="hero-section">
            <div class="hero-content">
                <div class="brand-section">
                    <h1 class="brand-title">Ijarify</h1>
                    <p class="brand-tagline">Your Trusted Real Estate Partner</p>
                </div>

                <div class="hero-headline">
                    <h2>Join Egypt's Most Trusted Real Estate Platform</h2>
                    <p>Start your property journey with confidence</p>
                </div>

                <div class="value-props">
                    <div class="value-item">
                        <i class="bi bi-check-circle-fill"></i>
                        <span>Access 10,000+ verified properties</span>
                    </div>
                    <div class="value-item">
                        <i class="bi bi-check-circle-fill"></i>
                        <span>Connect with certified agents</span>
                    </div>
                    <div class="value-item">
                        <i class="bi bi-check-circle-fill"></i>
                        <span>Secure transactions & documentation</span>
                    </div>
                    <div class="value-item">
                        <i class="bi bi-check-circle-fill"></i>
                        <span>24/7 customer support</span>
                    </div>
                </div>

                <div class="trust-indicators">
                    <div class="trust-item">
                        <i class="bi bi-people-fill"></i>
                        <div>
                            <strong>50,000+</strong>
                            <span>Active Users</span>
                        </div>
                    </div>
                    <div class="trust-item">
                        <i class="bi bi-star-fill"></i>
                        <div>
                            <strong>4.8/5</strong>
                            <span>User Rating</span>
                        </div>
                    </div>
                    <div class="trust-item">
                        <i class="bi bi-shield-check"></i>
                        <div>
                            <strong>Verified</strong>
                            <span>Secure Platform</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Form Section -->
        <div class="form-section">
            <div class="form-card">

                <!-- Form Header -->
                <div class="form-header">
                    <div class="form-icon">
                        <i class="bi bi-person-plus-fill"></i>
                    </div>
                    <h2>Create Your Account</h2>
                    <p>Start your property journey today</p>
                </div>

                <!-- Social Registration (Optional) -->
                <div class="social-auth">
                    <button type="button" class="social-btn google-btn">
                        <i class="bi bi-google"></i>
                        Continue with Google
                    </button>
                    <button type="button" class="social-btn facebook-btn">
                        <i class="bi bi-facebook"></i>
                        Continue with Facebook
                    </button>
                </div>

                <div class="divider">
                    <span>OR</span>
                </div>

                <!-- Registration Form -->
                <form asp-action="Register" asp-controller="Account" method="post" id="registerForm">

                    <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

                    <!-- Full Name -->
                    <div class="form-group">
                        <label asp-for="Name" class="form-label">
                            <i class="bi bi-person"></i>
                            Full Name
                        </label>
                        <input asp-for="Name" class="form-control" placeholder="Enter your full name" />
                        <span asp-validation-for="Name" class="field-error"></span>
                    </div>

                    <!-- Username -->
                    <div class="form-group">
                        <label asp-for="UserName" class="form-label">
                            <i class="bi bi-at"></i>
                            Username
                        </label>
                        <input asp-for="UserName" class="form-control" placeholder="Choose a unique username" />
                        <span asp-validation-for="UserName" class="field-error"></span>
                        <span class="field-hint">This will be your public identifier</span>
                    </div>

                    <!-- Email -->
                    <div class="form-group">
                        <label asp-for="Email" class="form-label">
                            <i class="bi bi-envelope"></i>
                            Email Address
                        </label>
                        <input asp-for="Email" class="form-control" placeholder="you@example.com" />
                        <span asp-validation-for="Email" class="field-error"></span>
                    </div>

                    <!-- Password -->
                    <div class="form-group">
                        <label asp-for="Password" class="form-label">
                            <i class="bi bi-lock"></i>
                            Password
                        </label>
                        <div class="password-wrapper">
                            <input asp-for="Password" class="form-control" placeholder="Create a strong password" type="password" id="password" />
                            <button type="button" class="toggle-password" onclick="togglePassword('password')">
                                <i class="bi bi-eye" id="password-icon"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="field-error"></span>
                        <div class="password-strength" id="passwordStrength">
                            <div class="strength-bar">
                                <div class="strength-fill" id="strengthFill"></div>
                            </div>
                            <span class="strength-text" id="strengthText">Enter password</span>
                        </div>
                    </div>

                    <!-- Confirm Password -->
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="form-label">
                            <i class="bi bi-check-circle"></i>
                            Confirm Password
                        </label>
                        <div class="password-wrapper">
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Re-enter your password" type="password" id="confirmPassword" />
                            <button type="button" class="toggle-password" onclick="togglePassword('confirmPassword')">
                                <i class="bi bi-eye" id="confirmPassword-icon"></i>
                            </button>
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="field-error"></span>
                    </div>

                    <!-- Address -->
                    <div class="form-group">
                        <label asp-for="Address" class="form-label">
                            <i class="bi bi-geo-alt"></i>
                            Address
                        </label>
                        <input asp-for="Address" class="form-control" placeholder="Enter your address" />
                        <span asp-validation-for="Address" class="field-error"></span>
                    </div>

                    <!-- Phone Number -->
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="form-label">
                            <i class="bi bi-phone"></i>
                            Phone Number
                        </label>
                        <div class="phone-wrapper">
                            <span class="country-code">+20</span>
                            <input asp-for="PhoneNumber" class="form-control phone-input" placeholder="1012345678" />
                        </div>
                        <span asp-validation-for="PhoneNumber" class="field-error"></span>
                        <span class="field-hint">Optional - for account recovery</span>
                    </div>

                    <!-- Terms Agreement -->
                    <div class="terms-agreement">
                        <label class="checkbox-label">
                            <input type="checkbox" required />
                            <span class="checkmark"></span>
                            <span class="terms-text">
                                I agree to the <a href="#" target="_blank">Terms of Service</a> and <a href="#" target="_blank">Privacy Policy</a>
                            </span>
                        </label>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn-submit">
                        <i class="bi bi-person-check"></i>
                        Create Account
                    </button>

                    <!-- Login Link -->
                    <div class="form-footer">
                        <span>Already have an account?</span>
                        <a asp-action="Login" asp-controller="Account">Login here</a>
                    </div>

                </form>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Toggle Password Visibility
        function togglePassword(inputId) {
            const input = document.getElementById(inputId);
            const icon = document.getElementById(inputId + '-icon');

            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        }

        // Password Strength Checker
        document.getElementById('password')?.addEventListener('input', function(e) {
            const password = e.target.value;
            const strengthFill = document.getElementById('strengthFill');
            const strengthText = document.getElementById('strengthText');

            let strength = 0;
            let text = '';
            let color = '';

            if (password.length === 0) {
                strength = 0;
                text = 'Enter password';
                color = '#cbd5e1';
            } else if (password.length < 6) {
                strength = 25;
                text = 'Weak';
                color = '#ef4444';
            } else if (password.length < 8) {
                strength = 50;
                text = 'Fair';
                color = '#f59e0b';
            } else {
                // Check for mixed case, numbers, special chars
                let score = 50;
                if (/[a-z]/.test(password) && /[A-Z]/.test(password)) score += 15;
                if (/[0-9]/.test(password)) score += 15;
                if (/[^a-zA-Z0-9]/.test(password)) score += 20;

                strength = score;
                if (score < 75) {
                    text = 'Good';
                    color = '#10b981';
                } else {
                    text = 'Strong';
                    color = '#059669';
                }
            }

            strengthFill.style.width = strength + '%';
            strengthFill.style.backgroundColor = color;
            strengthText.textContent = text;
            strengthText.style.color = color;
        });
    </script>
}

