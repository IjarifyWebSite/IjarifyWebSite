@model IjarifySystemBLL.DTOs.Bookings.BookingReadDto

<div class="booking-request-card">
    <!-- Header -->
    <div class="request-header">
        <div class="request-info">
            <span class="booking-id">#@Model.Id</span>
            <span class="booking-date">
                <i class="bi bi-clock"></i>
                @Model.CreatedAt.ToString("dd MMM yyyy, hh:mm tt")
            </span>
        </div>
        <span class="status-badge status-@Model.Status.ToString().ToLower()">
            @Model.Status.ToString()
        </span>
    </div>

    <!-- Guest Info -->
    <div class="guest-section">
        <div class="guest-avatar">
            <i class="bi bi-person-circle"></i>
        </div>
        <div class="guest-info">
            <h4>@Model.UserName</h4>
            <p class="guest-contact">
                <i class="bi bi-envelope"></i> @Model.UserEmail
                @if (!string.IsNullOrEmpty(Model.UserPhone))
                {
                    <span class="ms-3">
                        <i class="bi bi-telephone"></i> @Model.UserPhone
                    </span>
                }
            </p>
        </div>
    </div>

    <!-- Property Info -->
    <div class="property-section">
        <div class="property-icon">
            <i class="bi bi-house-door"></i>
        </div>
        <div class="property-details">
            <h5>@Model.PropertyTitle</h5>
            <p>@Model.PropertyAddress</p>
        </div>
    </div>

    <!-- Booking Details -->
    <div class="booking-details-grid">
        <div class="detail-item">
            <i class="bi bi-calendar-check text-success"></i>
            <div>
                <small>Check-In</small>
                <strong>@Model.Check_In.ToString("dd MMM yyyy")</strong>
            </div>
        </div>

        <div class="detail-item">
            <i class="bi bi-calendar-x text-danger"></i>
            <div>
                <small>Check-Out</small>
                <strong>@Model.Check_Out.ToString("dd MMM yyyy")</strong>
            </div>
        </div>

        <div class="detail-item">
            <i class="bi bi-moon-stars text-primary"></i>
            <div>
                <small>Duration</small>
                <strong>@((Model.Check_Out - Model.Check_In).Days) nights</strong>
            </div>
        </div>

        <div class="detail-item">
            <i class="bi bi-cash-stack text-warning"></i>
            <div>
                <small>Total Price</small>
                <strong>$@Model.TotalPrice.ToString("N2")</strong>
            </div>
        </div>
    </div>

    <!-- Actions -->
    <div class="request-actions">
        @if (Model.Status == IjarifySystemDAL.Entities.Enums.BookingStatus.Pending)
        {
            <!-- ✅ زرار Approve -->
            <form asp-controller="Booking"
                  asp-action="Approve"
                  asp-route-id="@Model.Id"
                  method="post"
                  class="action-form"
                  onsubmit="return confirm('Are you sure you want to approve this booking request?')">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn-approve">
                    <i class="bi bi-check-circle-fill"></i>
                    Approve Request
                </button>
            </form>

            <!-- ❌ زرار Reject -->
            <form asp-controller="Booking"
                  asp-action="Reject"
                  asp-route-id="@Model.Id"
                  method="post"
                  class="action-form"
                  onsubmit="return confirm('Are you sure you want to reject this booking request?')">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn-reject">
                    <i class="bi bi-x-circle-fill"></i>
                    Reject Request
                </button>
            </form>
        }
        else if (Model.Status == IjarifySystemDAL.Entities.Enums.BookingStatus.Approved)
        {
            <div class="status-message approved">
                <i class="bi bi-check-circle-fill"></i>
                You approved this booking
            </div>
        }
        else if (Model.Status == IjarifySystemDAL.Entities.Enums.BookingStatus.Rejected)
        {
            <div class="status-message rejected">
                <i class="bi bi-x-circle-fill"></i>
                You rejected this booking
            </div>
        }
    </div>
</div>

<style>
    .booking-request-card {
        background: white;
        border-radius: 20px;
        padding: 28px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        transition: all 0.3s;
        margin-bottom: 24px;
    }

