        align-items: center;
        gap: 16px;
        margin-bottom: 24px;
        padding: 16px;
        background: #f8fafc;
        border-radius: 12px;
    }

    .property-icon {
        width: 48px;
        height: 48px;
        background: linear-gradient(135deg, #38b2ac 0%, #2c7a7b 100%);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 24px;
    }

    .property-details h5 {
        font-size: 16px;
        font-weight: 700;
        color: #0f172a;
        margin-bottom: 4px;
    }

    .property-details p {
        color: #64748b;
        font-size: 13px;
        margin: 0;
    }

    .booking-details-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        gap: 16px;
        margin-bottom: 24px;
    }

    .detail-item {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 16px;
        background: white;
        border: 2px solid #f1f5f9;
        border-radius: 12px;
    }

        .detail-item i {
            font-size: 24px;
        }

        .detail-item small {
            display: block;
            color: #94a3b8;
            font-size: 12px;
            margin-bottom: 4px;
        }

        .detail-item strong {
            display: block;
            color: #0f172a;
            font-size: 15px;
            font-weight: 700;
        }

    .request-actions {
        display: flex;
        gap: 12px;
        padding-top: 24px;
        border-top: 2px solid #f1f5f9;
    }

    .action-form {
        flex: 1;
    }

    .btn-approve,
    .btn-reject {
        width: 100%;
        padding: 16px 24px;
        border: none;
        border-radius: 14px;
        font-weight: 700;
        font-size: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        cursor: pointer;
        transition: all 0.3s;
    }

    .btn-approve {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: white;
        box-shadow: 0 4px 16px rgba(16, 185, 129, 0.3);
    }

        .btn-approve:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 24px rgba(16, 185, 129, 0.4);
        }

    .btn-reject {
        background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        color: white;
        box-shadow: 0 4px 16px rgba(239, 68, 68, 0.3);
    }

        .btn-reject:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 24px rgba(239, 68, 68, 0.4);
        }

    .status-message {
        width: 100%;
        padding: 16px 24px;
        border-radius: 14px;
        font-weight: 600;
        font-size: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

        .status-message.approved {
            background: linear-gradient(135deg, #d1fae5 0%, #a7f3d0 100%);
            color: #065f46;
        }

        .status-message.rejected {
            background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
            color: #991b1b;
        }

    @@media (max-width: 768px) {
        .booking-details-grid

    {
        grid-template-columns: 1fr;
    }

    .request-actions {
        flex-direction: column;
    }

    .guest-section {
        flex-direction: column;
        text-align: center;
    }

    }
</style>


