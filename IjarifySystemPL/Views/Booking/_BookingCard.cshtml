    }

    .btn-view-details {
        background: var(--accent-color);
        color: white;
        padding: 12px 24px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        font-size: 14px;
        transition: all 0.3s;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .btn-view-details:hover {
            transform: translateX(5px);
            color: white;
            opacity: 0.9;
        }

    @@media (max-width: 768px) {
        .dates-section-modern

    {
        flex-direction: column;
        gap: 15px;
    }

