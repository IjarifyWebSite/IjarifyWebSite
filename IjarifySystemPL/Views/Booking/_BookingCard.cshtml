@model IjarifySystemBLL.ViewModels.Booking.BookingListViewModel

<div class="booking-card-modern">
    <div class="booking-header-modern">
        <div class="booking-id-section">
            <span class="booking-id">#@Model.Id</span>
            <span class="booking-status-badge @GetStatusClass()">
                @Html.Raw(GetStatusIcon()) @Model.StatusText
            </span>
        </div>
    </div>

    <div class="booking-body-modern">
        <div class="property-info-modern">
            <h5 class="property-name">
                <i class="bi bi-building"></i>
                @Model.PropertyTitle
            </h5>
        </div>

        <div class="dates-section-modern">
            <div class="date-box check-in">
                <div class="date-icon">
                    <i class="bi bi-calendar-check"></i>
                </div>
                <div class="date-details">
                    <small>Check-In</small>
                    <strong>@Model.Check_In.ToString("dd MMM")</strong>
                    <span class="year">@Model.Check_In.ToString("yyyy")</span>
                </div>
            </div>

            <div class="duration-indicator">
                <i class="bi bi-arrow-right"></i>
                <span>@Model.TotalNights nights</span>
            </div>

            <div class="date-box check-out">
                <div class="date-icon">
                    <i class="bi bi-calendar-x"></i>
                </div>
                <div class="date-details">
                    <small>Check-Out</small>
                    <strong>@Model.Check_Out.ToString("dd MMM")</strong>
                    <span class="year">@Model.Check_Out.ToString("yyyy")</span>
                </div>
            </div>
        </div>

        <div class="booking-footer-modern">
            <div class="price-section">
                <small>Total Amount</small>
                <h4 class="price">@Model.TotalPrice.ToString("C")</h4>
            </div>
            <div class="action-section">
                <a asp-controller="Booking" asp-action="Details" asp-route-id="@Model.Id" class="btn-view-details">
                    View Details <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
</div>

@functions {
    string GetStatusClass()
    {
        return Model.Status switch
        {
            IjarifySystemDAL.Entities.Enums.BookingStatus.Pending => "status-pending",
            IjarifySystemDAL.Entities.Enums.BookingStatus.Approved => "status-approved",
            IjarifySystemDAL.Entities.Enums.BookingStatus.Rejected => "status-rejected",
            _ => "status-default"
        };
    }

    string GetStatusIcon()
    {
        return Model.Status switch
        {
            IjarifySystemDAL.Entities.Enums.BookingStatus.Pending => "<i class='bi bi-clock-history'></i>",
            IjarifySystemDAL.Entities.Enums.BookingStatus.Approved => "<i class='bi bi-check-circle-fill'></i>",
            IjarifySystemDAL.Entities.Enums.BookingStatus.Rejected => "<i class='bi bi-x-circle-fill'></i>",
            _ => "<i class='bi bi-question-circle'></i>"
        };
    }
}

