<div class="booking-wrapper">
    <div class="booking-container">

        <!-- Left Side - Property Summary -->
        <div class="property-summary-section">
            <div class="summary-card">
                <div class="summary-header">
                    <div class="header-icon">
                        <i class="bi bi-building"></i>
                    </div>
                    <div>
                        <h3>Your Selection</h3>
                        <p>Review property details</p>
                    </div>
                </div>

                <div class="property-info">
                    <h4 class="property-title">@Model.PropertyTitle</h4>

                    <div class="price-display">
                        <div class="price-label">Price per night</div>
                        <div class="price-amount">$@((Model.PricePerNight ?? Model.TotalPrice).ToString("N2"))</div>
                    </div>

                    <div class="info-divider"></div>

                    <div class="booking-calculation">
                        <div class="calc-row">
                            <span class="calc-label">
                                <i class="bi bi-calendar-range"></i>
                                Duration
                            </span>
                            <span class="calc-value" id="durationDisplay">Select dates</span>
                        </div>

                        <div class="calc-row">
                            <span class="calc-label">
                                <i class="bi bi-moon-stars"></i>
                                Number of nights
                            </span>
                            <span class="calc-value" id="nightsDisplay">-</span>
                        </div>

                        <div class="calc-row subtotal">
                            <span class="calc-label">
                                <i class="bi bi-calculator"></i>
                                Subtotal
                            </span>
                            <span class="calc-value" id="subtotalDisplay">$0.00</span>
                        </div>
                    </div>

                    <div class="info-divider"></div>

                    <div class="total-section">
                        <div class="total-row">
                            <span class="total-label">Total Amount</span>
                            <span class="total-amount" id="totalAmountDisplay">$0.00</span>
                        </div>
                        <p class="total-note">All prices in USD</p>
                    </div>
                </div>

                <div class="trust-badges">
                    <div class="badge-item">
                        <i class="bi bi-shield-check"></i>
                        <span>Secure Payment</span>
                    </div>
                    <div class="badge-item">
                        <i class="bi bi-arrow-clockwise"></i>
                        <span>Free Cancellation</span>
                    </div>
                    <div class="badge-item">
                        <i class="bi bi-headset"></i>
                        <span>24/7 Support</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Side - Booking Form -->
        <div class="booking-form-section">

            @if (TempData["Error"] != null)
            {
                <div class="alert-box error-alert">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    <div>
                        <strong>Booking Error</strong>
                        <p>@TempData["Error"]</p>
                    </div>
                    <button type="button" class="alert-close" onclick="this.parentElement.style.display='none'">
                        <i class="bi bi-x"></i>
                    </button>
                </div>
            }

            <div class="form-card">
                <div class="form-header">
                    <div class="step-indicator">
                        <div class="step active">
                            <div class="step-number">1</div>
                            <div class="step-text">Select Dates</div>
                        </div>
                        <div class="step-line"></div>
                        <div class="step">
                            <div class="step-number">2</div>
                            <div class="step-text">Confirm</div>
                        </div>
                    </div>

                    <h2>Complete Your Booking</h2>
                    <p>Choose your check-in and check-out dates below</p>
                </div>

                <form asp-action="Create" method="post" asp-controller="Booking" id="bookingForm" novalidate>
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="PropertyID" />
                    <input type="hidden" asp-for="PropertyTitle" />
                    <input type="hidden" asp-for="PricePerNight" />
                    <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

                    <div class="form-content">

                        <!-- Date Selection Section -->
                        <div class="section-title">
                            <i class="bi bi-calendar-event"></i>
                            <h3>Select Your Dates</h3>
                        </div>

                        <div class="date-selection-grid">
                            <div class="form-group">
                                <label asp-for="Check_In" class="form-label">
                                    <i class="bi bi-calendar-check"></i>
                                    Check-In Date
                                </label>
                                <div class="date-input-wrapper">
                                    <input asp-for="Check_In"
                                           class="form-control date-input"
                                           type="date"
                                           id="checkIn"
                                           placeholder="Select date" />
                                    <i class="bi bi-calendar3 date-icon"></i>
                                </div>
                                <span asp-validation-for="Check_In" class="field-error"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Check_Out" class="form-label">
                                    <i class="bi bi-calendar-x"></i>
                                    Check-Out Date
                                </label>
                                <div class="date-input-wrapper">
                                    <input asp-for="Check_Out"
                                           class="form-control date-input"
                                           type="date"
                                           id="checkOut"
                                           placeholder="Select date" />
                                    <i class="bi bi-calendar3 date-icon"></i>
                                </div>
                                <span asp-validation-for="Check_Out" class="field-error"></span>
                            </div>
                        </div>

                        <div class="date-hint">
                            <i class="bi bi-info-circle"></i>
                            <span>Minimum stay: 1 night. Check-in after 2:00 PM, Check-out before 11:00 AM</span>
                        </div>

                        <!-- Price Summary Section -->
                        <div class="section-title">
                            <i class="bi bi-cash-stack"></i>
                            <h3>Price Summary</h3>
                        </div>

                        <div class="form-group">
                            <label asp-for="TotalPrice" class="form-label">
                                <i class="bi bi-calculator"></i>
                                Total Amount
                            </label>
                            <div class="price-input-wrapper">
                                <span class="currency-symbol">$</span>
                                <input asp-for="TotalPrice"
                                       class="form-control price-input"
                                       id="totalPrice"
                                       readonly />
                            </div>
                            <span asp-validation-for="TotalPrice" class="field-error"></span>
                        </div>

                        <!-- Important Information -->
                        <div class="info-box">
                            <div class="info-header">
                                <i class="bi bi-info-circle-fill"></i>
                                <strong>Booking Information</strong>
                            </div>
                            <ul class="info-list">
                                <li><i class="bi bi-check2"></i> Instant confirmation upon booking</li>
                                <li><i class="bi bi-check2"></i> Free cancellation up to 48 hours before check-in</li>
                                <li><i class="bi bi-check2"></i> Full refund if you cancel within the free cancellation period</li>
                                <li><i class="bi bi-check2"></i> Email confirmation will be sent immediately</li>
                            </ul>
                        </div>

                        <!-- Terms Agreement -->
                        <div class="terms-section">
                            <label class="checkbox-container">
                                <input type="checkbox" id="termsCheckbox" required />
                                <span class="checkmark"></span>
                                <span class="checkbox-text">
                                    I agree to the <a href="#" target="_blank">Terms & Conditions</a> and
                                    <a href="#" target="_blank">Cancellation Policy</a>
                                </span>
                            </label>
                        </div>

                        <!-- Action Buttons -->
                        <div class="form-actions">
                            <a asp-controller="Property"
                               asp-action="Details"
                               asp-route-id="@Model.PropertyID"
                               class="btn-secondary">
                                <i class="bi bi-arrow-left"></i>
                                Back to Property
                            </a>
                            <button type="submit" class="btn-primary" id="confirmBtn">
                                <i class="bi bi-check-circle-fill"></i>
                                Confirm Booking
                            </button>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Additional Help Section -->
            <div class="help-section">
                <div class="help-content">
                    <i class="bi bi-question-circle"></i>
                    <div>
                        <strong>Need Help?</strong>
                        <p>Contact our support team 24/7 at <a href="tel:+201234567890">+20 123 456 7890</a></p>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function() {
            const pricePerNight = @(Model.PricePerNight ?? Model.TotalPrice);
            const today = new Date().toISOString().split('T')[0];

            // Set minimum dates
            $('#checkIn').attr('min', today);
            $('#checkOut').attr('min', today);

            function updateBookingSummary() {
                const checkInVal = $('#checkIn').val();
                const checkOutVal = $('#checkOut').val();

                if (checkInVal && checkOutVal) {
                    const checkIn = new Date(checkInVal);
                    const checkOut = new Date(checkOutVal);

                    if (checkOut > checkIn) {
                        const nights = Math.ceil((checkOut - checkIn) / (1000 * 60 * 60 * 24));
                        const total = nights * pricePerNight;

                        // Update all displays
                        $('#totalPrice').val(total.toFixed(2));
                        $('#nightsDisplay').text(nights + ' night' + (nights > 1 ? 's' : ''));
                        $('#durationDisplay').text(formatDateRange(checkIn, checkOut));
                        $('#subtotalDisplay').text('$' + total.toFixed(2));
                        $('#totalAmountDisplay').text('$' + total.toFixed(2));

                        // Remove any previous error highlighting
                        $('#checkIn, #checkOut').removeClass('error-input');
                    } else {
                        resetSummary();
                        if (checkOutVal) {
                            $('#checkOut').addClass('error-input');
                            showError('Check-out date must be after check-in date');
                        }
                    }
                } else {
                    resetSummary();
                }
            }

            function resetSummary() {
                $('#nightsDisplay').text('-');
                $('#durationDisplay').text('Select dates');
                $('#subtotalDisplay').text('$0.00');
                $('#totalAmountDisplay').text('$0.00');
                $('#totalPrice').val('0');
            }

            function formatDateRange(start, end) {
                const options = { month: 'short', day: 'numeric' };
                return start.toLocaleDateString('en-US', options) + ' - ' + end.toLocaleDateString('en-US', options);
            }

            function showError(message) {
                // You can implement toast notification here
                console.error(message);
            }

            // Update check-out minimum date when check-in changes
            $('#checkIn').on('change', function() {
                const checkInDate = new Date($(this).val());
                checkInDate.setDate(checkInDate.getDate() + 1);
                $('#checkOut').attr('min', checkInDate.toISOString().split('T')[0]);
                updateBookingSummary();
            });

            // Update on date change
            $('#checkOut').on('change', updateBookingSummary);

            // Form validation
            $('#bookingForm').on('submit', function(e) {
                const checkIn = $('#checkIn').val();
                const checkOut = $('#checkOut').val();
                const termsChecked = $('#termsCheckbox').is(':checked');

                if (!checkIn || !checkOut) {
                    e.preventDefault();
                    alert('Please select both check-in and check-out dates');
                    return false;
                }

                if (!termsChecked) {
                    e.preventDefault();
                    alert('Please agree to the terms and conditions');
                    return false;
                }

                const checkInDate = new Date(checkIn);
                const checkOutDate = new Date(checkOut);

                if (checkOutDate <= checkInDate) {
                    e.preventDefault();
                    alert('Check-out date must be after check-in date');
                    return false;
                }

                // Show loading state
                $('#confirmBtn').prop('disabled', true).html('<i class="bi bi-hourglass-split"></i> Processing...');
            });

            // Initial calculation if dates are pre-filled
            updateBookingSummary();
        });
    </script>
}

