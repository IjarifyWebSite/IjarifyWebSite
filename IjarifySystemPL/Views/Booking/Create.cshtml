
@{
    ViewData["Title"] = "Create";
}

@model  IjarifySystemBLL.ViewModels.Booking.BookingCreateViewModel

@{
    ViewData["Title"] = "Book Property";
}

<main class="main">
    <!-- Page Title -->
    <div class="page-title">
        <div class="heading">
            <div class="container">
                <div class="row d-flex justify-content-center text-center">
                    <div class="col-lg-8">
                        <h1 class="heading-title">Book Your Property</h1>
                        <p class="mb-0">
                            Complete the booking form below to reserve your selected property.
                            Our team will review your request and contact you shortly.
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <nav class="breadcrumbs">
            <div class="container">
                <ol>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="Property" asp-action="Index">Properties</a></li>
                    <li class="current">Book Property</li>
                </ol>
            </div>
        </nav>
    </div>

    <!-- Booking Form Section -->
    <section id="booking-form" class="booking-form section">
        <div class="container" data-aos="fade-up">
            <div class="row justify-content-center">
                <div class="col-lg-8">

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="booking-card">
                        <div class="booking-header">
                            <h3><i class="bi bi-calendar-check"></i> Booking Details</h3>
                        </div>

                        <form asp-action="Create" method="post" class="php-email-form">
                            <input type="hidden" asp-for="PropertyID" />
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                            <div class="row gy-4">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Check_In" class="form-label">
                                            <i class="bi bi-calendar-event"></i> Check-In Date
                                        </label>
                                        <input asp-for="Check_In" class="form-control" type="date" id="checkIn" />
                                        <span asp-validation-for="Check_In" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Check_Out" class="form-label">
                                            <i class="bi bi-calendar-x"></i> Check-Out Date
                                        </label>
                                        <input asp-for="Check_Out" class="form-control" type="date" id="checkOut" />
                                        <span asp-validation-for="Check_Out" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-group">
                                        <label asp-for="TotalPrice" class="form-label">
                                            <i class="bi bi-cash-stack"></i> Total Price
                                        </label>
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <input asp-for="TotalPrice" class="form-control" id="totalPrice" readonly />
                                        </div>
                                        <span asp-validation-for="TotalPrice" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="booking-summary">
                                        <div class="summary-item">
                                            <span class="summary-label">Property:</span>
                                            <span class="summary-value" id="propertyInfo">Loading...</span>
                                        </div>
                                        <div class="summary-item">
                                            <span class="summary-label">Duration:</span>
                                            <span class="summary-value" id="durationInfo">-</span>
                                        </div>
                                        <div class="summary-item total">
                                            <span class="summary-label">Total Amount:</span>
                                            <span class="summary-value" id="totalAmount">$0.00</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12 text-center">
                                    <a asp-controller="Property" asp-action="Details" asp-route-id="@Model.PropertyID"
                                       class="btn btn-secondary me-2">
                                        <i class="bi bi-arrow-left"></i> Back to Property
                                    </a>
                                    <button type="submit" class="btn-getstarted">
                                        <i class="bi bi-check-circle"></i> Confirm Booking
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Styles {
    <style>
        .booking-card {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 5px 30px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            margin-bottom: 30px;
        }

        .booking-header {
            background: var(--accent-color);
            padding: 25px 30px;
            color: #fff;
        }

            .booking-header h3 {
                margin: 0;
                font-size: 24px;
                font-weight: 600;
            }

        .php-email-form {
            padding: 30px;
        }

        .form-label {
            font-weight: 600;
            color: var(--accent-color);
            margin-bottom: 8px;
            display: block;
        }

            .form-label i {
                margin-right: 5px;
            }

        .booking-summary {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 20px;
            margin-top: 10px;
        }

        .summary-item {
            display: flex;
            justify-content: space-between;
            padding: 10px 0;
            border-bottom: 1px solid #dee2e6;
        }

            .summary-item:last-child {
                border-bottom: none;
            }

            .summary-item.total {
                font-weight: 700;
                font-size: 18px;
                color: #2a5298;
                padding-top: 15px;
                margin-top: 10px;
                border-top: 2px solid var(--accent-color);
            }

        .summary-label {
            color: #6c757d;
        }

        .summary-value {
            color: #212529;
            font-weight: 600;
        }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
            color: #fff;
            padding: 12px 30px;
            border-radius: 50px;
            transition: all 0.3s;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
                border-color: #545b62;
            }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function() {
            // Get property info via AJAX (optional - if you want to load it)
            const propertyId = @Model.PropertyID;

            function updateBookingSummary() {
                const checkIn = new Date($('#checkIn').val());
                const checkOut = new Date($('#checkOut').val());

                if (checkIn && checkOut && checkOut > checkIn) {
                    const nights = Math.ceil((checkOut - checkIn) / (1000 * 60 * 60 * 24));
                    const pricePerNight = 100; // You can get this from the property
                    const total = nights * pricePerNight;

                    $('#totalPrice').val(total.toFixed(2));
                    $('#durationInfo').text(nights + ' night(s)');
                    $('#totalAmount').text('$' + total.toFixed(2));
                } else {
                    $('#durationInfo').text('-');
                    $('#totalAmount').text('$0.00');
                }
            }

            $('#checkIn, #checkOut').on('change', updateBookingSummary);
            updateBookingSummary();
        });
    </script>
}

