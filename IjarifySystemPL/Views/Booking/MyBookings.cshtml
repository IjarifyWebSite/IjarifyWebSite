    <!-- Bookings Section -->
    <section id="my-bookings" class="my-bookings section">
        <div class="container">

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Stats Cards -->
            <div class="row mb-4">
                <div class="col-md-3 mb-3">
                    <div class="stat-card upcoming">
                        <div class="stat-icon">
                            <i class="bi bi-calendar-check"></i>
                        </div>
                        <div class="stat-content">
                            <h3>@Model.UpcomingBookings.Count</h3>
                            <p>Upcoming</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="stat-card pending">
                        <div class="stat-icon">
                            <i class="bi bi-hourglass-split"></i>
                        </div>
                        <div class="stat-content">
                            <h3>@Model.PendingBookings.Count</h3>
                            <p>Pending</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="stat-card past">
                        <div class="stat-icon">
                            <i class="bi bi-archive"></i>
                        </div>
                        <div class="stat-content">
                            <h3>@Model.PastBookings.Count</h3>
                            <p>Completed</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <div class="stat-card rejected">
                        <div class="stat-icon">
                            <i class="bi bi-x-circle"></i>
                        </div>
                        <div class="stat-content">
                            <h3>@Model.RejectedBookings.Count</h3>
                            <p>Rejected</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Booking Tabs -->
            <ul class="nav nav-pills booking-tabs mb-4" role="tablist">
                <li class="nav-item">
                    <button class="nav-link active" data-bs-toggle="pill" data-bs-target="#upcoming" type="button">
                        <i class="bi bi-calendar-check"></i> Upcoming
                        @if (Model.UpcomingBookings.Any())
                        {
                            <span class="badge">@Model.UpcomingBookings.Count</span>
                        }
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="pill" data-bs-target="#pending" type="button">
                        <i class="bi bi-hourglass-split"></i> Pending
                        @if (Model.PendingBookings.Any())
                        {
                            <span class="badge">@Model.PendingBookings.Count</span>
                        }
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="pill" data-bs-target="#past" type="button">
                        <i class="bi bi-archive"></i> Past
                        @if (Model.PastBookings.Any())
                        {
                            <span class="badge">@Model.PastBookings.Count</span>
                        }
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" data-bs-toggle="pill" data-bs-target="#rejected" type="button">
                        <i class="bi bi-x-circle"></i> Rejected
                        @if (Model.RejectedBookings.Any())
                        {
                            <span class="badge">@Model.RejectedBookings.Count</span>
                        }
                    </button>
                </li>
            </ul>

            <div class="tab-content">
                <!-- Upcoming -->
                <div class="tab-pane fade show active" id="upcoming">
                    @if (Model.UpcomingBookings.Any())
                    {
                        <div class="row">
                            @foreach (var booking in Model.UpcomingBookings)
                            {
                                <div class="col-lg-6 mb-4">
                                    @await Html.PartialAsync("_BookingCard", booking)
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="bi bi-calendar-x"></i>
                            <h4>No Upcoming Bookings</h4>
                            <p>You don't have any upcoming reservations</p>
                            <a asp-controller="Property" asp-action="Index" class="btn-getstarted">
                                <i class="bi bi-search"></i> Browse Properties
                            </a>
                        </div>
                    }
                </div>

                <!-- Pending -->
                <div class="tab-pane fade" id="pending">
                    @if (Model.PendingBookings.Any())
                    {
                        <div class="row">
                            @foreach (var booking in Model.PendingBookings)
                            {
                                <div class="col-lg-6 mb-4">
                                    @await Html.PartialAsync("_BookingCard", booking)
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="bi bi-hourglass"></i>
                            <h4>No Pending Bookings</h4>
                            <p>All your booking requests have been processed</p>
                        </div>
                    }
                </div>

                <!-- Past -->
                <div class="tab-pane fade" id="past">
                    @if (Model.PastBookings.Any())
                    {
                        <div class="row">
                            @foreach (var booking in Model.PastBookings)
                            {
                                <div class="col-lg-6 mb-4">
                                    @await Html.PartialAsync("_BookingCard", booking)
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="bi bi-clock-history"></i>
                            <h4>No Past Bookings</h4>
                            <p>You haven't completed any stays yet</p>
                        </div>
                    }
                </div>

                <!-- Rejected -->
                <div class="tab-pane fade" id="rejected">
                    @if (Model.RejectedBookings.Any())
                    {
                        <div class="row">
                            @foreach (var booking in Model.RejectedBookings)
                            {
                                <div class="col-lg-6 mb-4">
                                    @await Html.PartialAsync("_BookingCard", booking)
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="bi bi-check-circle"></i>
                            <h4>No Rejected Bookings</h4>
                            <p>Great news! None of your requests have been rejected</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</main>

<style>
    /* Stats Cards */
    .stat-card {
        background: white;
        border-radius: 12px;
        margin-top:70px;
        padding: 25px;
        box-shadow: 0 3px 15px rgba(0,0,0,0.08);
        display: flex;
        align-items: center;
        gap: 20px;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.12);
        }

    .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 28px;
        color: white;
    }

    .stat-card.upcoming .stat-icon {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .stat-card.pending .stat-icon {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    }

    .stat-card.past .stat-icon {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    }

    .stat-card.rejected .stat-icon {
        background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
    }

    .stat-content h3 {
        font-size: 32px;
        font-weight: 700;
        color: #2a5298;
        margin: 0;
    }

    .stat-content p {
        margin: 0;
        color: #6c757d;
        font-size: 14px;
    }

    /* Tabs */
    .booking-tabs {
        background: white;
        border-radius: 12px;
        padding: 10px;
        box-shadow: 0 2px 15px rgba(0,0,0,0.08);
        display: flex;
        gap: 10px;
    }

        .booking-tabs .nav-link {
            border-radius: 8px;
            padding: 12px 20px;
            color: #6c757d;
            font-weight: 600;
            border: none;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .booking-tabs .nav-link i {
                font-size: 18px;
            }

            .booking-tabs .nav-link .badge {
                background: #e9ecef;
                color: #6c757d;
                border-radius: 12px;
                padding: 3px 8px;
                font-size: 11px;
                font-weight: 600;
            }

            .booking-tabs .nav-link.active {
                background: var(--accent-color);
                color: white;
            }

                .booking-tabs .nav-link.active .badge {
                    background: rgba(255,255,255,0.2);
                    color: white;
                }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 80px 20px;
        background: #f8f9fa;
        border-radius: 12px;
    }

        .empty-state i {
            font-size: 80px;
            color: #dee2e6;
            margin-bottom: 20px;
        }

        .empty-state h4 {
            color: #495057;
            margin-bottom: 10px;
            font-weight: 600;
        }

        .empty-state p {
            color: #6c757d;
            margin-bottom: 25px;
        }

    @@media (max-width: 768px) {
        .booking-tabs

    {
        flex-wrap: wrap;
    }

    .booking-tabs .nav-link {
        flex: 1 1 45%;
    }

    }
</style>