        margin-bottom: 40px;
    }

    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 20px;
        flex-wrap: wrap;
    }

    .header-left {
        display: flex;
        align-items:start;
        gap: 20px;
    }

    .header-icon {
        width: 72px;
        height: 72px;
        background: linear-gradient(135deg, #38b2ac 0%, #2c7a7b 100%);
        border-radius: 18px;
        display: flex;
