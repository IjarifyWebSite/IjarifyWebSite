        box-shadow: 0 8px 24px rgba(13, 148, 136, 0.25);
    }

    .header-left h1 {
        font-size: 32px;
        font-weight: 700;
        color: #0f172a;
        margin-bottom: 6px;
    }

    .header-left p {
        color: #64748b;
        font-size: 15px;
        margin: 0;
    }

    .btn-new-booking {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 14px 28px;
        background: linear-gradient(135deg, #38b2ac 0%, #2c7a7b 100%);
        color: white;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 600;
        font-size: 15px;
        box-shadow: 0 4px 14px rgba(13, 148, 136, 0.3);
        transition: all 0.3s;
    }

       .btn-new-booking:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(44, 122, 123, 0.3);
            color: white;
        }

        .btn-new-booking i {
            font-size: 20px;
        }

    /* Alert Box */
    .alert-box {
        display: flex;
        align-items: flex-start;
        gap: 14px;
        padding: 16px 20px;
        border-radius: 12px;
        margin-bottom: 30px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    }

        .alert-box i:first-child {
            font-size: 24px;
            flex-shrink: 0;
        }

        .alert-box.success {
            background: #dcfce7;
            border: 1px solid #86efac;
        }

            .alert-box.success i {
                color: #16a34a;
            }

        .alert-box.error {
            background: #fee2e2;
            border: 1px solid #fca5a5;
        }

            .alert-box.error i {
                color: #dc2626;
            }

        .alert-box strong {
            display: block;
            font-size: 15px;
            margin-bottom: 4px;
            color: #0f172a;
        }

        .alert-box p {
            margin: 0;
            font-size: 14px;
            color: #475569;
        }

    .alert-close {
        margin-left: auto;
        background: none;
        border: none;
        cursor: pointer;
        font-size: 20px;
        color: #94a3b8;
        padding: 0;
    }

        .alert-close:hover {
            color: #64748b;
        }

    /* Stats Grid */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 24px;
        margin-bottom: 40px;
    }

    .stat-card {
        background: white;
        border-radius: 16px;
        padding: 24px;
        display: flex;
        align-items: center;
        gap: 18px;
        box-shadow: 0 4px 20px rgba(15, 23, 42, 0.08);
        border: 1px solid #e2e8f0;
        transition: all 0.3s;
        position: relative;
        overflow: hidden;
    }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
        }

        .stat-card.upcoming::before {
            background: linear-gradient(to bottom, #0d9488, #14b8a6);
        }

        .stat-card.pending::before {
            background: linear-gradient(to bottom, #f59e0b, #fbbf24);
        }

        .stat-card.completed::before {
            background: linear-gradient(to bottom, #3b82f6, #60a5fa);
        }

        .stat-card.rejected::before {
            background: linear-gradient(to bottom, #ef4444, #f87171);
        }

        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 30px rgba(15, 23, 42, 0.12);
        }

    .stat-icon {
        width: 64px;
        height: 64px;
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 30px;
        flex-shrink: 0;
    }

    .stat-card.upcoming .stat-icon {
        background: linear-gradient(135deg, #ccfbf1 0%, #99f6e4 100%);
        color: #0d9488;
    }

    .stat-card.pending .stat-icon {
        background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
        color: #f59e0b;
    }

    .stat-card.completed .stat-icon {
        background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%);
        color: #3b82f6;
    }

    .stat-card.rejected .stat-icon {
        background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
        color: #ef4444;
    }

    .stat-content {
        flex: 1;
    }

        .stat-content h3 {
            font-size: 36px;
            font-weight: 700;
            color: #0f172a;
            margin-bottom: 4px;
            line-height: 1;
        }

        .stat-content p {
            font-size: 14px;
            color: #64748b;
            font-weight: 500;
            margin: 0;
        }

    .stat-badge {
        position: absolute;
        top: 12px;
        right: 12px;
        padding: 4px 10px;
        border-radius: 6px;
        font-size: 11px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .stat-card.upcoming .stat-badge {
        background: #ccfbf1;
        color: #0d9488;
    }

    .stat-card.pending .stat-badge {
        background: #fef3c7;
        color: #f59e0b;
    }

    .stat-card.completed .stat-badge {
        background: #dbeafe;
        color: #3b82f6;
    }

    .stat-card.rejected .stat-badge {
        background: #fee2e2;
        color: #ef4444;
    }

    /* Tabs Container */
    .tabs-container {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(15, 23, 42, 0.08);
        border: 1px solid #e2e8f0;
        overflow: hidden;
    }

    .booking-tabs {
        display: flex;
        background: #f8fafc;
        padding: 8px;
        gap: 6px;
        border-bottom: 1px solid #e2e8f0;
        overflow-x: auto;
    }

    .tab-btn {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 14px 24px;
        background: transparent;
        border: none;
        border-radius: 10px;
        color: #64748b;
        font-weight: 600;
        font-size: 14px;
        cursor: pointer;
        transition: all 0.2s;
        white-space: nowrap;
    }

        .tab-btn i {
            font-size: 18px;
        }

        .tab-btn:hover {
            background: #e2e8f0;
            color: #0f172a;
        }

        .tab-btn.active {
            background: linear-gradient(135deg, #38b2ac 0%, #2c7a7b 100%);
            color: white;
            box-shadow: 0 2px 8px rgba(13, 148, 136, 0.25);
        }

    .count-badge {
        background: rgba(255, 255, 255, 0.2);
        color: white;
        padding: 3px 8px;
        border-radius: 6px;
        font-size: 12px;
        font-weight: 700;
    }

    .tab-btn:not(.active) .count-badge {
        background: #cbd5e1;
        color: #475569;
    }

    /* Tab Content */
    .tab-content {
        padding: 32px;
    }

    .tab-pane {
        display: none;
    }

        .tab-pane.active {
            display: block;
        }

    /* Bookings Grid */
    .bookings-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(480px, 1fr));
        gap: 24px;
    }

    /* Empty State */
    .empty-state {
        text-align: center;
        padding: 80px 20px;
        background: #f8fafc;
        border-radius: 12px;
    }

    .empty-icon {
        width: 120px;
        height: 120px;
        background: linear-gradient(135deg, #e2e8f0 0%, #cbd5e1 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 24px;
    }

        .empty-icon i {
            font-size: 60px;
            color: #94a3b8;
        }

    .empty-state h3 {
        font-size: 24px;
        font-weight: 700;
        color: #0f172a;
        margin-bottom: 12px;
    }

    .empty-state p {
        font-size: 15px;
        color: #64748b;
        margin-bottom: 28px;
    }

    .btn-action {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 14px 28px;
        background: linear-gradient(135deg, #38b2ac 0%, #2c7a7b 100%);
        color: white;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 600;
        font-size: 15px;
        box-shadow: 0 4px 14px rgba(13, 148, 136, 0.3);
        transition: all 0.3s;
    }

        .btn-action:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(44, 122, 123, 0.3);
            color: white;
        }

    /* Responsive */
    @@media (max-width: 1200px) {
        .bookings-grid

    {
        grid-template-columns: 1fr;
    }

    }

    @@media (max-width: 768px) {
        .header-content

    {
