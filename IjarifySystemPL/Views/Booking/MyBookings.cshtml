@model IjarifySystemBLL.ViewModels.Booking.MyBookingsViewModel

@{
    ViewData["Title"] = "My Bookings - Ijarify";
}

<!-- Google Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

<div class="bookings-wrapper">
    <div class="container">

        <!-- Page Header -->
        <div class="page-header">
            <div class="header-content">
                <div class="header-left">
                    <div class="header-icon">
                        <i class="bi bi-calendar-check"></i>
                    </div>
                    <div>
                        <h1>My Bookings</h1>
                        <p>Manage your property reservations and booking history</p>
                    </div>
                </div>
                <a asp-controller="Property" asp-action="Index" class="btn-new-booking">
                    <i class="bi bi-plus-circle"></i>
                    Browse Properties
                </a>
            </div>
        </div>

        <!-- Alerts -->
        @if (TempData["Success"] != null)
        {
            <div class="alert-box success">
                <i class="bi bi-check-circle-fill"></i>
                <div>
                    <strong>Success!</strong>
                    <p>@TempData["Success"]</p>
                </div>
                <button type="button" class="alert-close" onclick="this.parentElement.style.display='none'">
                    <i class="bi bi-x"></i>
                </button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert-box error">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <div>
                    <strong>Error!</strong>
                    <p>@TempData["Error"]</p>
                </div>
                <button type="button" class="alert-close" onclick="this.parentElement.style.display='none'">
                    <i class="bi bi-x"></i>
                </button>
            </div>
        }

        <!-- Stats Overview -->
        <div class="stats-grid">
            <div class="stat-card upcoming">
                <div class="stat-icon">
                    <i class="bi bi-calendar-check-fill"></i>
                </div>
                <div class="stat-content">
                    <h3>@Model.UpcomingBookings.Count</h3>
                    <p>Upcoming Bookings</p>
                </div>
                <div class="stat-badge">Active</div>
            </div>

            <div class="stat-card pending">
                <div class="stat-icon">
                    <i class="bi bi-hourglass-split"></i>
                </div>
                <div class="stat-content">
                    <h3>@Model.PendingBookings.Count</h3>
                    <p>Pending Review</p>
                </div>
                <div class="stat-badge">Waiting</div>
            </div>

            <div class="stat-card completed">
                <div class="stat-icon">
                    <i class="bi bi-check-circle-fill"></i>
                </div>
                <div class="stat-content">
                    <h3>@Model.PastBookings.Count</h3>
                    <p>Completed Stays</p>
                </div>
                <div class="stat-badge">Done</div>
            </div>

            <div class="stat-card rejected">
                <div class="stat-icon">
                    <i class="bi bi-x-circle-fill"></i>
                </div>
                <div class="stat-content">
                    <h3>@Model.RejectedBookings.Count</h3>
                    <p>Declined Requests</p>
                </div>
                <div class="stat-badge">Closed</div>
            </div>
        </div>

        <!-- Tabs Navigation -->
        <div class="tabs-container">
            <nav class="booking-tabs">
                <button class="tab-btn active" data-tab="upcoming">
                    <i class="bi bi-calendar-event"></i>
                    <span>Upcoming</span>
                    @if (Model.UpcomingBookings.Any())
                    {
                        <span class="count-badge">@Model.UpcomingBookings.Count</span>
                    }
                </button>
                <button class="tab-btn" data-tab="pending">
                    <i class="bi bi-clock-history"></i>
                    <span>Pending</span>
                    @if (Model.PendingBookings.Any())
                    {
                        <span class="count-badge">@Model.PendingBookings.Count</span>
                    }
                </button>
                <button class="tab-btn" data-tab="past">
                    <i class="bi bi-archive"></i>
                    <span>Past</span>
                    @if (Model.PastBookings.Any())
                    {
                        <span class="count-badge">@Model.PastBookings.Count</span>
                    }
                </button>
                <button class="tab-btn" data-tab="rejected">
                    <i class="bi bi-x-octagon"></i>
                    <span>Rejected</span>
                    @if (Model.RejectedBookings.Any())
                    {
                        <span class="count-badge">@Model.RejectedBookings.Count</span>
                    }
                </button>
            </nav>

            <!-- Tab Content -->
            <div class="tab-content">

                <!-- Upcoming Tab -->
                <div class="tab-pane active" id="upcoming-tab">
                    @if (Model.UpcomingBookings.Any())
                    {
                        <div class="bookings-grid">
                            @foreach (var booking in Model.UpcomingBookings)
                            {
                                @await Html.PartialAsync("_BookingCard", booking)
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <div class="empty-icon">
                                <i class="bi bi-calendar-x"></i>
                            </div>
                            <h3>No Upcoming Bookings</h3>
                            <p>You don't have any upcoming reservations at the moment.</p>
                            <a asp-controller="Property" asp-action="Index" class="btn-action">
                                <i class="bi bi-search"></i>
                                Explore Properties
                            </a>
                        </div>
                    }
                </div>

                <!-- Pending Tab -->
                <div class="tab-pane" id="pending-tab">
                    @if (Model.PendingBookings.Any())
                    {
                        <div class="bookings-grid">
                            @foreach (var booking in Model.PendingBookings)
                            {
                                @await Html.PartialAsync("_BookingCard", booking)
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <div class="empty-icon">
                                <i class="bi bi-hourglass"></i>
                            </div>
                            <h3>No Pending Bookings</h3>
                            <p>All your booking requests have been processed.</p>
                        </div>
                    }
                </div>

                <!-- Past Tab -->
                <div class="tab-pane" id="past-tab">
                    @if (Model.PastBookings.Any())
                    {
                        <div class="bookings-grid">
                            @foreach (var booking in Model.PastBookings)
                            {
                                @await Html.PartialAsync("_BookingCard", booking)
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <div class="empty-icon">
                                <i class="bi bi-clock-history"></i>
                            </div>
                            <h3>No Past Bookings</h3>
                            <p>You haven't completed any stays yet.</p>
                        </div>
                    }
                </div>

                <!-- Rejected Tab -->
                <div class="tab-pane" id="rejected-tab">
                    @if (Model.RejectedBookings.Any())
                    {
                        <div class="bookings-grid">
                            @foreach (var booking in Model.RejectedBookings)
                            {
                                @await Html.PartialAsync("_BookingCard", booking)
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <div class="empty-icon">
                                <i class="bi bi-emoji-smile"></i>
                            </div>
                            <h3>No Rejected Bookings</h3>
                            <p>Great news! None of your booking requests have been declined.</p>
                        </div>
                    }
                </div>

            </div>
        </div>

    </div>
</div>

@section Scripts {
    <script>
        // Tab switching functionality
        document.addEventListener('DOMContentLoaded', function() {
            const tabButtons = document.querySelectorAll('.tab-btn');
            const tabPanes = document.querySelectorAll('.tab-pane');

            tabButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const targetTab = this.getAttribute('data-tab');

                    // Remove active class from all buttons and panes
                    tabButtons.forEach(btn => btn.classList.remove('active'));
                    tabPanes.forEach(pane => pane.classList.remove('active'));

                    // Add active class to clicked button and corresponding pane
                    this.classList.add('active');
                    document.getElementById(targetTab + '-tab').classList.add('active');
                });
            });
        });
    </script>
}

<style>
