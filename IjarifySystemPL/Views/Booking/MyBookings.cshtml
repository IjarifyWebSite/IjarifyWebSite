    }

    .btn-new-booking {
        width: 100%;
        justify-content: center;
    }

    .stats-grid {
        grid-template-columns: 1fr;
    }

    .tab-content {
        padding: 20px;
    }

    .booking-tabs {
        flex-wrap: nowrap;
        overflow-x: auto;
    }

    .tab-btn span:not(.count-badge) {
        display: none;
    }

    }

    @@media (max-width: 480px) {
        .container

    {
        padding: 0 12px;
    }

    .stat-content h3 {
        font-size: 28px;
    }

    }
</style>
