                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn-approve">
                                                    <i class="bi bi-check-circle-fill"></i>
                                                    Approve
                                                </button>
                                            </form>

                                            <form asp-action="Reject" asp-route-id="@request.Id" method="post" style="display:inline;" onsubmit="return confirm('Reject this booking request?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn-reject">
                                                    <i class="bi bi-x-circle-fill"></i>
                                                    Reject
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <div class="empty-icon">
                                <i class="bi bi-inbox"></i>
                            </div>
                            <h3>No Pending Requests</h3>
                            <p>You don't have any booking requests waiting for review.</p>
                        </div>
                    }
                </div>

                <!-- Approved Tab -->
