@{
    ViewData["Title"] = "Property Requests - Ijarify";
}

<!-- Google Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

<div class="requests-wrapper">
    <div class="container">

        <!-- Page Header -->
        <div class="page-header">
            <div class="header-content">
                <div class="header-left">
                    <div class="header-icon">
                        <i class="bi bi-inbox"></i>
                    </div>
                    <div>
                        <h1>Property Requests</h1>
                        <p>Manage booking requests on your properties</p>
                    </div>
                </div>
                <a asp-controller="Property" asp-action="MyProperties" class="btn-manage">
                    <i class="bi bi-buildings"></i>
                    My Properties
                </a>
            </div>
        </div>

        <!-- Alerts -->
        @if (TempData["Success"] != null)
        {
            <div class="alert-box success">
                <i class="bi bi-check-circle-fill"></i>
                <div>
                    <strong>Success!</strong>
                    <p>@TempData["Success"]</p>
                </div>
                <button type="button" class="alert-close" onclick="this.parentElement.style.display='none'">
                    <i class="bi bi-x"></i>
                </button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert-box error">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <div>
                    <strong>Error!</strong>
                    <p>@TempData["Error"]</p>
                </div>
                <button type="button" class="alert-close" onclick="this.parentElement.style.display='none'">
                    <i class="bi bi-x"></i>
                </button>
            </div>
        }

        <!-- Stats Overview -->
        <div class="stats-grid">
            <div class="stat-card pending">
                <div class="stat-icon">
                    <i class="bi bi-clock-history"></i>
                </div>
                <div class="stat-content">
                    <h3>@Model.PendingRequests.Count</h3>
                    <p>Pending Requests</p>
                </div>
                <div class="stat-badge">Review</div>
            </div>

            <div class="stat-card approved">
                <div class="stat-icon">
                    <i class="bi bi-check-circle-fill"></i>
                </div>
                <div class="stat-content">
                    <h3>@Model.ApprovedRequests.Count</h3>
                    <p>Approved Bookings</p>
                </div>
                <div class="stat-badge">Active</div>
            </div>

            <div class="stat-card rejected">
                <div class="stat-icon">
                    <i class="bi bi-x-circle-fill"></i>
                </div>
                <div class="stat-content">
                    <h3>@Model.RejectedRequests.Count</h3>
                    <p>Declined Requests</p>
                </div>
                <div class="stat-badge">Closed</div>
            </div>
        </div>

        <!-- Tabs Navigation -->
        <div class="tabs-container">
            <nav class="request-tabs">
                <button class="tab-btn active" data-tab="pending">
                    <i class="bi bi-hourglass-split"></i>
                    <span>Pending</span>
                    @if (Model.PendingRequests.Any())
                    {
                        <span class="count-badge">@Model.PendingRequests.Count</span>
                    }
                </button>
                <button class="tab-btn" data-tab="approved">
                    <i class="bi bi-check-circle"></i>
                    <span>Approved</span>
                    @if (Model.ApprovedRequests.Any())
                    {
                        <span class="count-badge">@Model.ApprovedRequests.Count</span>
                    }
                </button>
                <button class="tab-btn" data-tab="rejected">
                    <i class="bi bi-x-octagon"></i>
                    <span>Rejected</span>
                    @if (Model.RejectedRequests.Any())
                    {
                        <span class="count-badge">@Model.RejectedRequests.Count</span>
                    }
                </button>
            </nav>

            <!-- Tab Content -->
            <div class="tab-content">

                <!-- Pending Tab -->
                <div class="tab-pane active" id="pending-tab">
                    @if (Model.PendingRequests.Any())
                    {
                        <div class="requests-grid">
                            @foreach (var request in Model.PendingRequests)
                            {
                                <div class="request-card">
                                    <!-- Card Header -->
                                    <div class="card-header-section">
                                        <div class="header-left">
                                            <div class="booking-number">
                                                <i class="bi bi-receipt"></i>
                                                <span>Request #@request.Id</span>
                                            </div>
                                        </div>
                                        <div class="status-badge status-pending">
                                            <i class="bi bi-hourglass-split"></i>
                                            <span>Pending Review</span>
                                        </div>
                                    </div>

                                    <!-- Guest Info -->
                                    <div class="guest-section">
                                        <div class="guest-icon">
                                            <i class="bi bi-person-circle"></i>
                                        </div>
                                        <div class="guest-details">
                                            <h4>@request.UserName</h4>
                                            <div class="guest-contact">
                                                <span><i class="bi bi-envelope"></i> @request.UserEmail</span>
                                                @if (!string.IsNullOrEmpty(request.UserPhone))
                                                {
                                                    <span><i class="bi bi-telephone"></i> @request.UserPhone</span>
                                                }
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Property Info -->
                                    <div class="property-info">
                                        <i class="bi bi-building"></i>
                                        <span>@request.PropertyTitle</span>
                                    </div>

                                    <!-- Dates -->
                                    <div class="dates-section">
                                        <div class="date-item">
                                            <i class="bi bi-calendar-check"></i>
                                            <div>
                                                <small>Check-In</small>
                                                <strong>@request.Check_In.ToString("dd MMM yyyy")</strong>
                                            </div>
                                        </div>
                                        <div class="arrow">
                                            <i class="bi bi-arrow-right"></i>
                                            <span>@((request.Check_Out - request.Check_In).Days) nights</span>
                                        </div>
                                        <div class="date-item">
                                            <i class="bi bi-calendar-x"></i>
                                            <div>
                                                <small>Check-Out</small>
                                                <strong>@request.Check_Out.ToString("dd MMM yyyy")</strong>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Price & Actions -->
                                    <div class="card-footer">
                                        <div class="price-info">
                                            <small>Total Amount</small>
                                            <h3>@request.TotalPrice.ToString("C")</h3>
                                        </div>
                                        <div class="action-buttons">
