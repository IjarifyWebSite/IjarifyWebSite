@model IjarifySystemBLL.ViewModels.InquiryViewModels.InquiryDetailsViewModel

@{
    ViewData["Title"] = "Inquiry Details";
}

<!-- ===== PAGE HEADER ===== -->
<section class="page-header" style="margin-top: 100px;">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="heading-title">Inquiry Details</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item"><a asp-controller="Inquiry" asp-action="Index">My Inquiries</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Details</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</section>

<!-- ===== INQUIRY DETAILS ===== -->
<section class="inquiry-details-section py-5">
    <div class="container">
        <div class="row">
        
            <div class="col-lg-8">
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0"><i class="bi bi-house-door me-2"></i>Property Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 mb-3 mb-md-0">
                                <img src="@(Model.PropertyImage ?? "/images/no-image.jpg")" 
                                     alt="@Model.PropertyTitle" 
                                     class="img-fluid rounded" 
                                     style="width: 100%; height: 200px; object-fit: cover;">
                            </div>
                            <div class="col-md-8">
                                <h4 class="mb-2">
                                    <a href="@Url.Action("Details", "Property", new { id = Model.PropertyId })" 
                                       class="text-decoration-none text-dark">
                                        @Model.PropertyTitle
                                    </a>
                                </h4>
                                <p class="text-muted mb-2">
                                    <i class="bi bi-geo-alt text-primary"></i> @Model.PropertyLocation
                                </p>
                                <h5 class="text-primary mb-3">$@Model.PropertyPrice.ToString("N0")</h5>
                                <a href="@Url.Action("Details", "Property", new { id = Model.PropertyId })" 
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-eye"></i> View Property
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
 
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0"><i class="bi bi-chat-left-text me-2"></i>Your Message</h5>
                    </div>
                    <div class="card-body">
                        <div class="bg-light p-4 rounded">
                            <p class="mb-0" style="white-space: pre-wrap;">@Model.Message</p>
                        </div>
                        <div class="mt-3 text-muted small">
                            <i class="bi bi-clock"></i> Sent on @Model.CreatedAt.ToString("MMMM dd, yyyy 'at' hh:mm tt")
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <!-- Property Owner Card -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0"><i class="bi bi-person me-2"></i>Property Owner</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="rounded-circle bg-primary bg-opacity-10 d-flex align-items-center justify-content-center me-3" 
                                 style="width: 60px; height: 60px;">
                                <i class="bi bi-person text-primary" style="font-size: 1.5rem;"></i>
                            </div>
                            <div>
                                <h6 class="mb-0">@Model.PropertyOwnerName</h6>
                                <small class="text-muted">Property Owner</small>
                            </div>
                        </div>
                        
                        @if (!string.IsNullOrEmpty(Model.PropertyOwnerEmail))
                        {
                            <div class="mb-2">
                                <i class="bi bi-envelope text-muted me-2"></i>
                                <a href="mailto:@Model.PropertyOwnerEmail" class="text-decoration-none">
                                    @Model.PropertyOwnerEmail
                                </a>
                            </div>
                        }
                        
                        @if (!string.IsNullOrEmpty(Model.PropertyOwnerPhone))
                        {
                            <div class="mb-2">
                                <i class="bi bi-telephone text-muted me-2"></i>
                                <a href="tel:@Model.PropertyOwnerPhone" class="text-decoration-none">
                                    @Model.PropertyOwnerPhone
                                </a>
                            </div>
                        }
                    </div>
                </div>

                <!-- Your Info Card -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0"><i class="bi bi-person-check me-2"></i>Your Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-2">
                            <strong>Name:</strong> @Model.SenderName
                        </div>
                        @if (!string.IsNullOrEmpty(Model.SenderEmail))
                        {
                            <div class="mb-2">
                                <strong>Email:</strong> @Model.SenderEmail
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.SenderPhone))
                        {
                            <div class="mb-2">
                                <strong>Phone:</strong> @Model.SenderPhone
                            </div>
                        }
                    </div>
                </div>

             
                <div class="d-grid gap-2">
                    <a href="@Url.Action("Index", "Inquiry")" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to My Inquiries
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
