@using IjarifySystemBLL.ViewModels.PropertyViewModels;
@model CreatePropertyViewModel

@{
    ViewData["Title"] = "Edit Property";
}

<section class="submit-property-section">
    <div class="container">
        <!-- Header Section -->
        <div class="header-section">
            <div class="header-icon">
                <i class="bi bi-pencil-square"></i>
            </div>
            <h1 class="header-title">Edit Your Property</h1>
            <p class="header-subtitle">Update your property details to keep your listing accurate and attractive to potential tenants.</p>
        </div>

        <div class="form-wrapper">

            <form asp-action="Edit" asp-controller="Property" asp-route-id="@Model.Id" method="post" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <!-- ================= Basic Information ================= -->
                <div class="form-section">
                    <h4 class="section-title">
                        <i class="bi bi-info-circle"></i>
                        Basic Information
                    </h4>

                    <div class="form-row single">
                        <div class="form-group">
                            <label class="form-label">Property Title <span>*</span></label>
                            <input asp-for="Title" class="form-input" placeholder="Modern apartment in downtown" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">Listing Type <span>*</span></label>
                            <select asp-for="ListingType" class="form-select">
                                <option value="">Select Listing Type</option>
                                <option value="Rent">For Rent</option>
                                <option value="Sale">For Sale</option>
                            </select>
                            <span asp-validation-for="ListingType" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Property Type <span>*</span></label>
                            <select asp-for="PropertyType" class="form-select">
                                <option value="">Select Property Type</option>
                                <option value="Apartment">Apartment</option>
                                <option value="Villa">Villa</option>
                                <option value="House">House</option>
                                <option value="Studio">Studio</option>
                                <option value="Office">Office</option>
                                <option value="Shop">Shop</option>
                            </select>
                            <span asp-validation-for="PropertyType" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">Price <span>*</span></label>
                            <input asp-for="Price" type="number" class="form-input" placeholder="5000" step="0.01" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Area (m²) <span>*</span></label>
                            <input asp-for="Area" type="number" class="form-input" placeholder="120" step="0.01" />
                            <span asp-validation-for="Area" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row triple">
                        <div class="form-group">
                            <label class="form-label">Bedrooms <span>*</span></label>
                            <input asp-for="BedRooms" type="number" class="form-input" placeholder="3" min="0" />
                            <span asp-validation-for="BedRooms" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Bathrooms <span>*</span></label>
                            <input asp-for="BathRooms" type="number" class="form-input" placeholder="2" min="0" />
                            <span asp-validation-for="BathRooms" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row single">
                        <div class="form-group">
                            <label class="form-label">Description <span>*</span></label>
                            <textarea asp-for="Description" class="form-textarea" placeholder="Describe the property..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- ================= Location ================= -->
                <div class="form-section">
                    <h4 class="section-title">
                        <i class="bi bi-geo-alt"></i>
                        Location
                    </h4>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">City <span>*</span></label>
                            <input asp-for="City" class="form-input" placeholder="e.g., Cairo" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Region <span>*</span></label>
                            <input asp-for="Region" class="form-input" placeholder="e.g., New Cairo" />
                            <span asp-validation-for="Region" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row single">
                        <div class="form-group">
                            <label class="form-label">Street Address <span>*</span></label>
                            <input asp-for="Street" class="form-input" placeholder="e.g., 123 Main Street, Building 5" />
                            <span asp-validation-for="Street" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- ================= Main Image ================= -->
                <div class="form-section">
                    <h4 class="section-title">
                        <i class="bi bi-image"></i>
                        Main Image
                    </h4>

                    <div class="upload-zone" onclick="document.getElementById('mainImageInput').click()">
                        <i class="bi bi-image-fill"></i>
                        <h3>Upload New Main Property Image</h3>
                        <span class="file-info">Supported: JPG, PNG, WebP • Max 5MB</span>
                    </div>
                    <input asp-for="MainImage" type="file" id="mainImageInput" accept="image/*" style="display: none;" onchange="handleMainImage(this)" />
                    <span asp-validation-for="MainImage" class="text-danger"></span>
                    <small class="hint">
                        Leave empty to keep existing main image. Upload a new image to replace it.
                    </small>

                    <div id="mainPreview" class="main-preview"></div>
                </div>

                <!-- ================= Gallery Images ================= -->
                <div class="form-section">
                    <h4 class="section-title">
                        <i class="bi bi-images"></i>
                        Property Images
                    </h4>

                    <div class="upload-zone" onclick="document.getElementById('galleryInput').click()">
                        <i class="bi bi-cloud-arrow-up"></i>
                        <h3>Upload New Property Photos</h3>
                        <span class="file-info">Supported: JPG, PNG, WebP • Max 5MB per image</span>
                    </div>
                    <input asp-for="GalleryImages" type="file" id="galleryInput" multiple accept="image/*" style="display: none;" onchange="handleFiles(this)" />
                    <small class="hint">
                        Leave empty to keep existing gallery images. Upload new images to replace all gallery images.
                    </small>

                    <div id="previewGrid" class="preview-grid"></div>
                </div>

                <!-- ================= Amenities ================= -->
                <div class="form-section">
                    <h4 class="section-title">
                        <i class="bi bi-stars"></i>
                        Property Features
                    </h4>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">Feature Category</label>
                            <select id="amenityCategory" class="form-select">
                                <option value="">Select Category</option>
                                <option value="Interior">Interior Features</option>
                                <option value="Exterior">Exterior Features</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Feature Name</label>
                            <input type="text" id="amenityInput" class="form-input" placeholder="e.g., WiFi, Pool, Garden" />
                        </div>
                    </div>

                    <div class="form-row single">
                        <button type="button" class="btn btn-secondary" onclick="addAmenity()" style="width: auto;">
                            <i class="bi bi-plus-lg"></i>
                            Add Feature
                        </button>
                    </div>

                    <small class="hint" style="display: block; margin-bottom: 15px;">
                        Note: Adding new amenities will replace all existing amenities. Make sure to add all features you want to keep.
                    </small>

                    <!-- Interior Features List -->
                    <div id="interiorSection" style="display: none; margin-top: 30px;">
                        <div class="category-header">Interior Features</div>
                        <div id="interiorAmenities" class="amenities-display-grid"></div>
                    </div>

                    <!-- Exterior Features List -->
                    <div id="exteriorSection" style="display: none; margin-top: 30px;">
                        <div class="category-header">Exterior Features</div>
                        <div id="exteriorAmenities" class="amenities-display-grid"></div>
                    </div>
                </div>

                <!-- ================= Submit ================= -->
                <div class="submit-section">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i>
                        Cancel
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i>
                        Update Property
                    </button>
                </div>

            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        function handleMainImage(input) {
            const preview = document.getElementById('mainPreview');
            preview.innerHTML = ''; // Clear previous

            if (input.files && input.files[0]) {
                const reader = new FileReader();

                reader.onload = function(e) {
                    const div = document.createElement('div');
                    div.className = 'preview-item main-preview-item';
                    div.innerHTML = `
                        <img src="${e.target.result}" alt="Main Property Image">
                        <button type="button" class="remove-btn" onclick="removeMainImage()">
                            <i class="bi bi-x-lg"></i>
                        </button>
                    `;
                    preview.appendChild(div);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        function removeMainImage() {
            document.getElementById('mainImageInput').value = '';
            document.getElementById('mainPreview').innerHTML = '';
        }

        function handleFiles(input) {
            const preview = document.getElementById('previewGrid');

            if (input.files) {
                Array.from(input.files).forEach((file, index) => {
                    const reader = new FileReader();

                    reader.onload = function(e) {
                        const div = document.createElement('div');
                        div.className = 'preview-item';
                        div.innerHTML = `
                            <img src="${e.target.result}" alt="Property Image ${index + 1}">
                            <button type="button" class="remove-btn" onclick="this.parentElement.remove()">
                                <i class="bi bi-x-lg"></i>
                            </button>
                        `;
                        preview.appendChild(div);
                    }

                    reader.readAsDataURL(file);
                });
            }
        }

        // Drag and drop for gallery images
        const uploadZones = document.querySelectorAll('.upload-zone');

        uploadZones.forEach(uploadZone => {
            uploadZone.addEventListener('dragover', (e) => {
                e.preventDefault();
                uploadZone.style.borderColor = '#2c7a7b';
                uploadZone.style.background = '#f0fdfa';
            });

            uploadZone.addEventListener('dragleave', () => {
                uploadZone.style.borderColor = '#cbd5e1';
                uploadZone.style.background = '#f8fafc';
            });

            uploadZone.addEventListener('drop', (e) => {
                e.preventDefault();
                const files = e.dataTransfer.files;

                // Determine which input to use
                if (uploadZone.getAttribute('onclick').includes('mainImageInput')) {
                    document.getElementById('mainImageInput').files = files;
                    handleMainImage(document.getElementById('mainImageInput'));
                } else {
                    document.getElementById('galleryInput').files = files;
                    handleFiles(document.getElementById('galleryInput'));
                }

                uploadZone.style.borderColor = '#cbd5e1';
                uploadZone.style.background = '#f8fafc';
            });
        });

        // Custom Amenities Functions
        let amenityCounter = 0;

        function addAmenity() {
            const categorySelect = document.getElementById('amenityCategory');
            const amenityInput = document.getElementById('amenityInput');

            const category = categorySelect.value;
            const amenityName = amenityInput.value.trim();

            if (!category) {
                alert('Please select a category (Interior or Exterior)');
                return;
            }

            if (!amenityName) {
                alert('Please enter a feature name');
                return;
            }

            // تحديد الـ container المناسب
            const containerId = category === 'Interior' ? 'interiorAmenities' : 'exteriorAmenities';
            const sectionId = category === 'Interior' ? 'interiorSection' : 'exteriorSection';

            const container = document.getElementById(containerId);
            const section = document.getElementById(sectionId);

            // إظهار القسم
            section.style.display = 'block';

            // إنشاء الـ badge
            const amenityId = 'amenity_' + amenityCounter++;
            const amenityDiv = document.createElement('div');
            amenityDiv.className = 'amenity-badge';
            amenityDiv.innerHTML = `
                <span class="amenity-badge-text">
                    <i class="bi ${category === 'Interior' ? 'bi-house-door' : 'bi-building'}"></i>
                    ${amenityName}
                </span>
                <input type="hidden" name="Amenities[${amenityId}].Name" value="${amenityName}" />
                <input type="hidden" name="Amenities[${amenityId}].Category" value="${category}" />
                <button type="button" class="amenity-badge-remove" onclick="this.parentElement.remove(); checkEmptySections();">
                    <i class="bi bi-x"></i>
                </button>
            `;

            container.appendChild(amenityDiv);

            // تفريغ الحقول
            amenityInput.value = '';
            categorySelect.value = '';
            amenityInput.focus();
        }

        function checkEmptySections() {
            const interiorContainer = document.getElementById('interiorAmenities');
            const exteriorContainer = document.getElementById('exteriorAmenities');
            const interiorSection = document.getElementById('interiorSection');
            const exteriorSection = document.getElementById('exteriorSection');

            if (interiorContainer.children.length === 0) {
                interiorSection.style.display = 'none';
            }

            if (exteriorContainer.children.length === 0) {
                exteriorSection.style.display = 'none';
            }
        }

        // Allow Enter key to add amenity
        document.addEventListener('DOMContentLoaded', function() {
            const amenityInput = document.getElementById('amenityInput');
            if (amenityInput) {
                amenityInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        e.preventDefault();
                        addAmenity();
                    }
                });
            }
        });
    </script>
}

<style>
