@model IjarifySystemBLL.ViewModels.PropertyViewModels.PropertyDetailsViewModel
@{
    ViewData["Title"] = Model.Title;
}
<main class="main">

    <!-- Page Title -->
    <div class="page-title">
        <div class="heading">
            @* <div class="container">
                <div class="row d-flex justify-content-center text-center">
                    <div class="col-lg-8">
                        <h1 class="heading-title">@Model.Title</h1>
                        <p class="mb-0">
                            @Model.PropertyType property in @Model.City, @Model.Region
                        </p>
                    </div>
                </div>
            </div> *@
        </div>
        <nav class="breadcrumbs">
            <div class="container">
                <ol>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="Property" asp-action="Index">Properties</a></li>
                    <li class="current">@Model.Title</li>
                </ol>
            </div>
        </nav>
    </div><!-- End Page Title -->
    <!-- Property Details Section -->
    <section id="property-details" class="property-details section">

        <div class="container" data-aos="fade-up" data-aos-delay="100">

            <div class="row gy-4">

                <div class="col-lg-8">

                    <!-- Property Gallery -->
                    <div class="property-gallery" data-aos="fade-up" data-aos-delay="200">
                        @if (Model.Images != null && Model.Images.Any())
                        {
                            <div class="main-image-container image-zoom-container">
                                <img id="main-product-image"
                                     src="@Model.Images.First().ImageUrl"
                                     alt="@Model.Images.First().AltText"
                                     class="img-fluid main-property-image"
                                     data-zoom="@Model.Images.First().ImageUrl">
                                @if (Model.Images.Count > 1)
                                {
                                    <div class="image-nav-buttons">
                                        <button class="image-nav-btn prev-image" type="button">
                                            <i class="bi bi-chevron-left"></i>
                                        </button>
                                        <button class="image-nav-btn next-image" type="button">
                                            <i class="bi bi-chevron-right"></i>
                                        </button>
                                    </div>
                                }
                            </div>
                            <div class="thumbnail-gallery thumbnail-list">
                                @foreach (var image in Model.Images)
                                {
                                    <div class="thumbnail-item @(image == Model.Images.First() ? "active" : "")"
                                         data-image="@image.ImageUrl">
                                        <img src="@image.ImageUrl" alt="@image.AltText" class="img-fluid">
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="main-image-container">
                                <img src="~/assets/img/real-estate/default-property.webp"
                                     alt="@Model.Title"
                                     class="img-fluid main-property-image">
                            </div>
                        }
                    </div><!-- End Property Gallery -->
                    <!-- Property Description -->
                    <div class="property-description" data-aos="fade-up" data-aos-delay="300">
                        <h3>About This Property</h3>
                        <p>@Model.Description</p>
                    </div><!-- End Property Description -->
                    <!-- Amenities -->
                    @if (Model.Amenities != null && Model.Amenities.Any())
                    {
                        <div class="property-amenities" data-aos="fade-up" data-aos-delay="400">
                            <h3>Amenities &amp; Features</h3>
                            <div class="row">
                                <!-- Interior Features -->
                                @{
                                    var interiorAmenities = Model.Amenities.Where(a => a.Category == "Interior").ToList();
                                    var exteriorAmenities = Model.Amenities.Where(a => a.Category == "Exterior").ToList();
                                }

                                @if (interiorAmenities.Any())
                                {
                                    <div class="col-md-6">
                                        <h4>Interior Features</h4>
                                        <ul class="features-list">
                                            @foreach (var amenity in interiorAmenities)
                                            {
                                                <li><i class="bi @amenity.Icon"></i> @amenity.Name</li>
                                            }
                                        </ul>
                                    </div>
                                }

                                <!-- Exterior Features -->
                                @if (exteriorAmenities.Any())
                                {
                                    <div class="col-md-6">
                                        <h4>Exterior Features</h4>
                                        <ul class="features-list">
                                            @foreach (var amenity in exteriorAmenities)
                                            {
                                                <li><i class="bi @amenity.Icon"></i> @amenity.Name</li>
                                            }
                                        </ul>
                                    </div>
                                }
                            </div>
                        </div>
                    
                        <!-- End Amenities -->
                    }

                    <!-- Map Section -->
                    <div class="property-map" data-aos="fade-up" data-aos-delay="500">
                        <h3>Location</h3>
                        <div class="map-container">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2965.0824050173574!2d@Model.Longitude!3d@Model.Latitude!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zM@Model.Latitude!5e0!3m2!1sen!2sus!4v1234567890123"
                                    width="100%"
                                    height="400"
                                    style="border:0;"
                                    allowfullscreen=""
                                    loading="lazy"></iframe>
                        </div>
                        <div class="location-details">
                            <h4>Neighborhood Information</h4>
                            <p>@Model.NeighborhoodInfo</p>
                        </div>
                    </div><!-- End Map Section -->

                </div>

                <div class="col-lg-4">

                    <!-- Property Overview -->
                    <div class="property-overview sticky-top" data-aos="fade-up" data-aos-delay="200">
                        <div class="price-tag">$@Model.Price.ToString("N0")</div>
                        <div class="property-status">@Model.ListingType</div>

                        <div class="property-address">
                            <h4>@Model.Street</h4>
                            <p>@Model.City, @Model.Region</p>
                        </div>

                        <div class="property-stats">
                            <div class="stat-item">
                                <i class="bi bi-house"></i>
                                <div>
                                    <span class="value">@Model.BedRooms</span>
                                    <span class="label">Bedroom@(Model.BedRooms != 1 ? "s" : "")</span>
                                </div>
                            </div>
                            <div class="stat-item">
                                <i class="bi bi-droplet"></i>
                                <div>
                                    <span class="value">@Model.BathRooms</span>
                                    <span class="label">Bathroom@(Model.BathRooms != 1 ? "s" : "")</span>
                                </div>
                            </div>
                            <div class="stat-item">
                                <i class="bi bi-rulers"></i>
                                <div>
                                    <span class="value">@Model.Area.ToString("N0")</span>
                                    <span class="label">Sq Ft</span>
                                </div>
                            </div>
                            @if (Model.LotSize.HasValue)
                            {
                                <div class="stat-item">
                                    <i class="bi bi-tree"></i>
                                    <div>
                                        <span class="value">@Model.LotSize.Value.ToString("N2")</span>
                                        <span class="label">Acre Lot</span>
                                    </div>
                                </div>
                            }
                            @if (Model.YearBuilt.HasValue)
                            {
                                <div class="stat-item">
                                    <i class="bi bi-calendar"></i>
                                    <div>
                                        <span class="value">@Model.YearBuilt</span>
                                        <span class="label">Year Built</span>
                                    </div>
                                </div>
                            }
                            @if (Model.GarageSpaces.HasValue)
                            {
                                <div class="stat-item">
                                    <i class="bi bi-car-front"></i>
                                    <div>
                                        <span class="value">@Model.GarageSpaces</span>
                                        <span class="label">Garage</span>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Agent Info -->
                        <div class="agent-info">
                            <div class="agent-avatar">
                                <img src="@Model.AgentAvatar" alt="@Model.AgentName" class="img-fluid">
                            </div>
                            <div class="agent-details">
                                <h4>@Model.AgentName</h4>
                                <p class="agent-title">@Model.AgentTitle</p>
                                <p class="agent-phone"><i class="bi bi-telephone"></i> @Model.AgentPhone</p>
                                <p class="agent-email"><i class="bi bi-envelope"></i> @Model.AgentEmail</p>
                            </div>
                        </div><!-- End Agent Info -->
                        <!-- Book Property Button -->
                        <div class="booking-action-card">
                            <div class="booking-price">
                                <span class="price-label">Book this property</span>
                                <h3 class="price-value">$@Model.Price.ToString("N0")</h3>
                                <small class="price-period">per month</small>
                            </div>
                            <a asp-controller="Booking"
                               asp-action="Create"
                               asp-route-propertyId="@Model.Id"
                               class="btn-book-now">
                                <i class="bi bi-calendar-check-fill"></i>
                                Reserve Now
                            </a>
                            <p class="booking-note">
                                <i class="bi bi-shield-check"></i>
                                Free cancellation • Instant confirmation
                            </p>
                        </div>

                        <!-- Contact Form -->
                        <div class="contact-form">
                        <!-- Contact Form -->
                        <div class="contact-form">
                            <h4>Schedule a Tour</h4>
                            <form asp-controller="Inquiry" asp-action="Create" method="post" class="php-email-form">
                                <input type="hidden" name="PropertyId" value="@Model.Id" />
                                <div class="row">
                                    <div class="col-12 form-group">
                                        <input type="text" name="Name" class="form-control" placeholder="Your Name" required>
                                    </div>
                                    <div class="col-12 form-group">
                                        <input type="email" name="Email" class="form-control" placeholder="Your Email" required>
                                    </div>
                                    <div class="col-12 form-group">
                                        <input type="tel" name="Phone" class="form-control" placeholder="Your Phone">
                                    </div>
                                    <div class="col-12 form-group">
                                        <input type="date" name="PreferredDate" class="form-control" placeholder="Preferred Tour Date">
                                    </div>
                                    <div class="col-12 form-group">
                                        <textarea class="form-control" name="Message" rows="4" placeholder="Your Message"></textarea>
                                    </div>
                                    <div class="col-12 text-center">
                                        <button type="submit" class="btn btn-primary">Schedule Tour</button>
                                    </div>
                                </div>
                            </form>
                        </div><!-- End Contact Form -->
                        <!-- Social Share -->
                        <div class="social-share">
                            <h5>Share This Property</h5>
                            <div class="share-buttons">
                                <a href="https://www.facebook.com/sharer/sharer.php?u=@Url.Action("Details", "Property", new { id = Model.Id }, Context.Request.Scheme)"
                                   target="_blank"
                                   class="share-btn facebook">
                                    <i class="bi bi-facebook"></i>
                                </a>
                                <a href="https://twitter.com/intent/tweet?url=@Url.Action("Details", "Property", new { id = Model.Id }, Context.Request.Scheme)&text=@Model.Title"
                                   target="_blank"
                                   class="share-btn twitter">
                                    <i class="bi bi-twitter"></i>
                                </a>
                                <a href="https://wa.me/?text=@Model.Title @Url.Action("Details", "Property", new { id = Model.Id }, Context.Request.Scheme)"
                                   target="_blank"
                                   class="share-btn whatsapp">
                                    <i class="bi bi-whatsapp"></i>
                                </a>
                                <a href="mailto:?subject=@Model.Title&body=Check out this property: @Url.Action("Details", "Property", new { id = Model.Id }, Context.Request.Scheme)"
                                   class="share-btn email">
                                    <i class="bi bi-envelope"></i>
                                </a>
                                <a href="javascript:window.print()" class="share-btn print">
                                    <i class="bi bi-printer"></i>
                                </a>
                            </div>
                        </div><!-- End Social Share -->

                    </div><!-- End Property Overview -->

                </div>

            </div>

        </div>

    </section><!-- /Property Details Section -->
    <!-- Reviews Section -->
    <section id="reviews" class="reviews section">
        <div class="container" data-aos="fade-up">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    @await Html.PartialAsync("~/Views/Review/_PropertyReviewList.cshtml", Model.Reviews, new ViewDataDictionary(ViewData) { { "TargetPropertyId", Model.Id } })
                </div>
            </div>
        </div>
    </section>
    <style>
        .booking-action-card {
            background: linear-gradient(135deg, #38b2ac 0%, #2c7a7b 100%);
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 25px;
            box-shadow: 0 8px 30px rgba(102, 126, 234, 0.3);
            text-align: center;
            color: white;
        }

        .booking-price {
            margin-bottom: 20px;
        }

        .price-label {
            display: block;
            font-size: 13px;
            text-transform: uppercase;
            letter-spacing: 1px;
            opacity: 0.9;
            margin-bottom: 8px;
        }

        .price-value {
            font-size: 42px;
            font-weight: 700;
            margin: 0;
            line-height: 1;
        }

        .price-period {
            display: block;
            font-size: 14px;
            opacity: 0.9;
            margin-top: 5px;
        }

        .btn-book-now {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            width: 100%;
            padding: 16px 24px;
            background: linear-gradient(135deg, #38b2ac 0%, #2c7a7b 100%);
            color: white;
            color: white;
            border-radius: 10px;
            font-weight: 700;
            font-size: 16px;
            text-decoration: none;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

            .btn-book-now:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 16px rgba(44, 122, 123, 0.3);
                color: white;
            }

            .btn-book-now i {
                font-size: 20px;
            }

        .booking-note {
            margin-top: 15px;
            margin-bottom: 0;
            font-size: 13px;
            opacity: 0.95;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 6px;
        }

            .booking-note i {
                font-size: 16px;
            }
    </style>
</main>