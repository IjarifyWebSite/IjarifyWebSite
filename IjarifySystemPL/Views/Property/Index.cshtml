@model IjarifySystemBLL.ViewModels.PropertyViewModels.PropertyIndexPageViewModel

@{
    ViewData["Title"] = "Index";
    int maxCards = 4;

    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    int placeHolders = maxCards - Model.Properties.Count;
}

<main class="main">

    <!-- Page Title -->
    <div class="page-title">
        <div class="heading">
            <div class="container">
                <div class="row d-flex justify-content-center text-center">
                    <div class="col-lg-8">
                        <h1 class="heading-title">Properties</h1>
                        <p class="mb-0">
                            Browse through our collection of premium properties.
                            Find your dream home or investment opportunity today.
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <nav class="breadcrumbs">
            <div class="container">
                <ol>
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="current">Properties</li>
                </ol>
            </div>
        </nav>
    </div>
    <!-- End Page Title -->
    <!-- Properties Section -->
    <section id="properties" class="properties section">

        <div class="container" data-aos="fade-up" data-aos-delay="100">

            <div class="row">

                <div class="col-lg-8">

                    <div class="properties-header mb-4">
                        <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
                            <div class="view-toggle d-flex gap-2">
                                <button class="btn btn-outline-secondary btn-sm view-btn active" data-view="grid">
                                    <i class="bi bi-grid-3x3-gap"></i> Grid
                                </button>
                                <button class="btn btn-outline-secondary btn-sm view-btn" data-view="list">
                                    <i class="bi bi-list"></i> List
                                </button>
                            </div>
                            <div class="sort-dropdown">
                                <select class="form-select form-select-sm">
                                    <option>Sort by: Newest</option>
                                    <option>Price: Low to High</option>
                                    <option>Price: High to Low</option>
                                    <option>Most Viewed</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="properties-grid view-grid active" data-aos="fade-up" data-aos-delay="200">
                        <div class="row g-4">

                            <!-- ===== NORMAL CARD ===== -->
                            @foreach (var property in Model.Properties)
                            {
                                <div class="col-lg-6 col-md-6">
                                    <div class="property-card">
                                        <div class="property-image">
                                            <img src="@property.MainImage" alt="@property.Name" class="img-fluid">
                                            <div class="property-badges">
                                                @if (property.IsNew)
                                                {
                                                    <span class="badge new">New</span>
                                                }
                                                <span class="badge for-sale">@property.ListingType</span>
                                            </div>
                                            <div class="property-overlay">
                                                <button class="favorite-btn"><i class="bi bi-heart"></i></button>
                                                <button class="gallery-btn" data-count="@property.TotalImages"><i class="bi bi-images"></i></button>
                                            </div>
                                        </div>
                                        <div class="property-content">
                                            <div class="property-price">$@property.Price.ToString("N0")</div>
                                            <h4 class="property-title">@property.Name</h4>
                                            <p class="property-location"><i class="bi bi-geo-alt"></i> @property.Location</p>
                                            @* Reviews  *@
                                            @if (property.Reviews != null && property.Reviews.TotalReviews > 0)
                                            {
                                                <div class="property-rating mb-2">
                                                    <div class="d-flex align-items-center gap-1">
                                                        <div class="rating-stars">
                                                            @for (int i = 1; i <= 5; i++)
                                                            {
                                                                if (i <= Math.Floor(property.Reviews.AverageRating))
                                                                {
                                                                    <i class="bi bi-star-fill text-warning"></i>
                                                                }
                                                                else if (i - 0.5 <= property.Reviews.AverageRating)
                                                                {
                                                                    <i class="bi bi-star-half text-warning"></i>
                                                                }
                                                                else
                                                                {
                                                                    <i class="bi bi-star text-muted"></i>
                                                                }
                                                            }
                                                        </div>
                                                        <small class="text-muted ms-1">
                                                            <strong>@property.Reviews.AverageRating.ToString("0.0")</strong>
                                                            (@property.Reviews.TotalReviews)
                                                        </small>
                                                    </div>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="property-rating">
                                                    <div class="rating-stars">
                                                        @for (int i = 1; i <= 5; i++)
                                                        {
                                                            <i class="bi bi-star-fill empty"></i>
                                                        }
                                                    </div>
                                                    <span class="rating-count">(No reviews yet)</span>
                                                </div>
                                            }


                                            <div class="property-features">
                                                <span><i class="bi bi-house"></i> @property.BedRooms Bed</span>
                                                <span><i class="bi bi-water"></i> @property.BathRooms Bath</span>
                                                <span><i class="bi bi-arrows-angle-expand"></i> @property.Area.ToString("N0") sqft</span>
                                            </div>
                                            <div class="property-agent">
                                                <img src="@property.AgentAvatar" alt="@property.AgentName" class="agent-avatar">
                                                <div class="agent-info">
                                                    <strong>@property.AgentName</strong>
                                                    <div class="agent-contact">
                                                        <small><i class="bi bi-telephone"></i> @property.AgentPhone</small>
                                                    </div>
                                                </div>
                                            </div>
                                            <a asp-controller="Property" asp-action="Details" asp-route-id="@property.Id" class="btn btn-primary w-100">View Details</a>
                                        </div>
                                    </div>
                                </div>
                            }

                            @for (int i = 0; i < placeHolders; i++)
                            {
                                <!-- ===== SKELETON CARD ===== -->
                                <div class="col-lg-6 col-md-6">
                                    <div class="card placeholder-glow">
                                        <div class="bg-secondary placeholder w-100" style="height:220px"></div>
                                        <div class="card-body">
                                            <span class="placeholder col-4 mb-2 d-block"></span>
                                            <h5><span class="placeholder col-8"></span></h5>
                                            <p><span class="placeholder col-10"></span></p>
                                            <div class="d-flex gap-2 mb-3">
                                                <span class="placeholder col-3"></span>
                                                <span class="placeholder col-3"></span>
                                                <span class="placeholder col-3"></span>
                                            </div>
                                            <div class="d-flex align-items-center gap-2 mb-3">
                                                <div class="placeholder rounded-circle" style="width:40px;height:40px"></div>
                                                <span class="placeholder col-4"></span>
                                            </div>
                                            <span class="btn btn-primary disabled col-12 placeholder"></span>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="properties-list view-list" data-aos="fade-up" data-aos-delay="200">
                        @foreach (var property in Model.Properties)
                        {
                            <div class="property-list-item">
                                <div class="row align-items-center">
                                    <div class="col-lg-4">
                                        <div class="property-image">
                                            <img src="@property.MainImage" alt="@property.Name" class="img-fluid">
                                            <div class="property-badges">
                                                @if (property.IsNew)
                                                {
                                                    <span class="badge new">New</span>
                                                }
                                                <span class="badge for-sale">@property.ListingType</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-8">
                                        <div class="property-content">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <div>
                                                    <h4 class="property-title mb-1">@property.Name</h4>
                                                    <p class="property-location mb-2"><i class="bi bi-geo-alt"></i> @property.Location</p>
                                                </div>
                                                <div class="property-price">$@property.Price.ToString("N0")</div>
                                            </div>
                                            <div class="property-features mb-3">
                                                <span><i class="bi bi-house"></i> @property.BedRooms Bed</span>
                                                <span><i class="bi bi-water"></i> @property.BathRooms Bath</span>
                                                <span><i class="bi bi-arrows-angle-expand"></i> @property.Area.ToString("N0") sqft</span>
                                            </div>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div class="property-agent">
                                                    <img src="@property.AgentAvatar" alt="@property.AgentName" class="agent-avatar">
                                                    <span>@property.AgentName</span>
                                                </div>
                                                <div class="property-actions">
                                                    <button class="btn btn-outline-secondary btn-sm"><i class="bi bi-heart"></i></button>
                                                    <a asp-controller="Property" asp-action="Details" asp-route-id="@property.Id" class="btn btn-primary btn-sm">View Details</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    @if (totalPages > 1)
                    {
                        <nav class="pagination-container">
                            <ul class="pagination justify-content-center">
                                <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(currentPage - 1)">&laquo;</a>
                                </li>

                                @for (int i = 1; i <= totalPages; i++)
                                {
                                    <li class="page-item @(i == currentPage ? "active" : "")">
                                        <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                                    </li>
                                }

                                <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(currentPage + 1)">&raquo;</a>
                                </li>
                            </ul>
                        </nav>
                    }

                </div>

                <div class="col-lg-4" data-aos="fade-up" data-aos-delay="200">

                    <div class="properties-sidebar">

                        <form asp-action="Index" method="get">
                            <div class="filter-widget">
                                <h5 class="filter-title">Filter Properties</h5>

                                <div class="filter-section">
                                    <label class="form-label">Listing Type</label>
                                    <select class="form-select" name="Filter.ListingType">
                                        <option value="">All Listings</option>
                                        @foreach (var listingType in Model.ListingTypes)
                                        {
                                            <option value="@listingType" selected="@(Model.Filter?.ListingType == listingType)">@listingType</option>
                                        }
                                    </select>
                                </div>

                                <div class="filter-section">
                                    <label class="form-label">Property Type</label>
                                    <select class="form-select" name="Filter.PropertyType">
                                        <option value="">All Types</option>
                                        @foreach (var propType in Model.PropertyTypes)
                                        {
                                            <option value="@propType" selected="@(Model.Filter?.PropertyType == propType)">@propType</option>
                                        }
                                    </select>
                                </div>

                                <div class="filter-section">
                                    <label class="form-label">Price Range</label>
                                    <div class="row g-2">
                                        <div class="col-6">
                                            <input type="number" class="form-control" name="Filter.MinPrice" placeholder="Min Price" value="@Model.Filter?.MinPrice">
                                        </div>
                                        <div class="col-6">
                                            <input type="number" class="form-control" name="Filter.MaxPrice" placeholder="Max Price" value="@Model.Filter?.MaxPrice">
                                        </div>
                                    </div>
                                </div>

                                <div class="filter-section">
                                    <label class="form-label">Bedrooms</label>
                                    <div class="bedroom-filter">
                                        <button type="button" class="btn btn-outline-secondary btn-sm filter-btn @(Model.Filter?.MinBedrooms == null ? "active" : "")" onclick="setMinBedrooms(null)">Any</button>
                                        <button type="button" class="btn btn-outline-secondary btn-sm filter-btn @(Model.Filter?.MinBedrooms == 1 ? "active" : "")" onclick="setMinBedrooms(1)">1+</button>
                                        <button type="button" class="btn btn-outline-secondary btn-sm filter-btn @(Model.Filter?.MinBedrooms == 2 ? "active" : "")" onclick="setMinBedrooms(2)">2+</button>
                                        <button type="button" class="btn btn-outline-secondary btn-sm filter-btn @(Model.Filter?.MinBedrooms == 3 ? "active" : "")" onclick="setMinBedrooms(3)">3+</button>
                                        <button type="button" class="btn btn-outline-secondary btn-sm filter-btn @(Model.Filter?.MinBedrooms == 4 ? "active" : "")" onclick="setMinBedrooms(4)">4+</button>
                                    </div>
                                    <input type="hidden" name="Filter.MinBedrooms" id="minBedroomsInput" value="@Model.Filter?.MinBedrooms">
                                </div>

                                <div class="filter-section">
                                    <label class="form-label">Bathrooms</label>
                                    <div class="bathroom-filter">
                                        <button type="button" class="btn btn-outline-secondary btn-sm filter-btn @(Model.Filter?.MinBathrooms == null ? "active" : "")" onclick="setMinBathrooms(null)">Any</button>
                                        <button type="button" class="btn btn-outline-secondary btn-sm filter-btn @(Model.Filter?.MinBathrooms == 1 ? "active" : "")" onclick="setMinBathrooms(1)">1+</button>
                                        <button type="button" class="btn btn-outline-secondary btn-sm filter-btn @(Model.Filter?.MinBathrooms == 2 ? "active" : "")" onclick="setMinBathrooms(2)">2+</button>
                                        <button type="button" class="btn btn-outline-secondary btn-sm filter-btn @(Model.Filter?.MinBathrooms == 3 ? "active" : "")" onclick="setMinBathrooms(3)">3+</button>
                                    </div>
                                    <input type="hidden" name="Filter.MinBathrooms" id="minBathroomsInput" value="@Model.Filter?.MinBathrooms">
                                </div>

                                <div class="filter-section">
                                    <label class="form-label">City</label>
                                    <select class="form-select" name="Filter.City">
                                        <option value="">All Cities</option>
                                        @foreach (var city in Model.Cities)
                                        {
                                            <option value="@city" selected="@(Model.Filter?.City == city)">@city</option>
                                        }
                                    </select>
                                </div>

                                <div class="filter-section">
                                    <label class="form-label">Region</label>
                                    <select class="form-select" name="Filter.Region">
                                        <option value="">All Regions</option>
                                        @foreach (var region in Model.Regions)
                                        {
                                            <option value="@region" selected="@(Model.Filter?.Region == region)">@region</option>
                                        }
                                    </select>
                                </div>

                                <div class="filter-section">
                                    <label class="form-label">Amenities</label>
                                    <div class="features-filter">
                                        @foreach (var amenity in Model.Amenities.Take(8))
                                        {
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" name="Filter.AmenityIds" value="@amenity.Id" id="amenity_@amenity.Id"
                                                       checked="@(Model.Filter?.AmenityIds?.Contains(amenity.Id) ?? false)">
                                                <label class="form-check-label" for="amenity_@amenity.Id">@amenity.Name</label>
                                            </div>
                                        }
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-primary w-100">Apply Filters</button>
                                <a asp-action="Index" class="btn btn-outline-secondary w-100 mt-2">Clear Filters</a>
                            </div>
                        </form>

                        <div class="featured-properties mt-4">
                            <h5>Featured Properties</h5>

                            @foreach (var property in Model.Properties.Where(p => p.IsNew).Take(3))
                            {
                                <div class="featured-item">
                                    <div class="row g-3 align-items-center">
                                        <div class="col-5">
                                            <img src="@property.MainImage" alt="@property.Name" class="img-fluid rounded">
                                        </div>
                                        <div class="col-7">
                                            <h6 class="mb-1">@property.Name</h6>
                                            <p class="text-muted small mb-1">@property.Location</p>
                                            <strong class="text-primary">$@property.Price.ToString("N0")</strong>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                    </div>

                </div>

            </div>

        </div>

    </section><!-- /Properties Section -->

</main>

@section Scripts {
    <script>
        function setMinBedrooms(value) {
            document.getElementById('minBedroomsInput').value = value || '';
            document.querySelector('form').submit();
        }

        function setMinBathrooms(value) {
            document.getElementById('minBathroomsInput').value = value || '';
            document.querySelector('form').submit();
        }
    </script>
}

<style>
    .property-rating {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 10px;
    }

    .rating-stars {
        display: flex;
        gap: 2px;
    }

    .rating-stars i {
        font-size: 14px;
        color: #ffc107;
    }

    .rating-stars i.empty {
        color: #e9ecef;
    }

    .rating-count {
        font-size: 13px;
        color: #6c757d;
    }
</style>