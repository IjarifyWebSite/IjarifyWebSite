@model List<IjarifySystemBLL.ViewModels.HomeViewModels.LocationCardViewModel>

@foreach (var location in Model)
{
    <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="100">
        <a asp-controller="Property" asp-action="Index" asp-route-filter.City="@location.City" class="city-card-link">
            <div class="area-card">
                <div class="area-image-wrapper">
                    <img src="@location.ImageUrl" alt="@location.City" class="area-image">
                </div>
                <h3 class="area-name">@location.City, @location.Region</h3>
                <p class="text-muted">@location.PropertyCount Properties</p>
            </div>
        </a>
    </div>
}