                    <li><a asp-controller="Home" asp-action="Index" asp-fragment="about">About</a></li>
                    <li><a asp-controller="Home" asp-action="Index" asp-fragment="footer">Contact</a></li>



                    @if (User.Identity.IsAuthenticated)
                    {
                        var currentUser = await UserManager.GetUserAsync(User);
                        var profileImage = currentUser?.ImageUrl;
                        var hasProfileImage = !string.IsNullOrEmpty(profileImage);
                        
                        <!-- Authenticated User Menu -->
                        <li class="dropdown">
                            <a href="#">
                                <span>
                                    @if (hasProfileImage)
                                    {
                                        <img src="@profileImage" alt="Profile" class="rounded-circle" style="width: 30px; height: 30px; object-fit: cover; margin-right: 5px;">
                                    }
                                    else
                                    {
                                        <i class="bi bi-person-circle" style="font-size: 28px; margin-right: 5px; color: #38b2ac; vertical-align: middle;"></i>
                                    } 
                                    My Account
                                </span> 
                                <i class="bi bi-chevron-down toggle-dropdown"></i>
                            </a>
                            <ul>
                                <li><a asp-controller="Account" asp-action="Profile"><i class="bi bi-person"></i> My Profile</a></li>
                                <li><a asp-controller="Booking" asp-action="MyBookings"><i class="bi bi-calendar-check"></i> My Bookings</a></li>
                                <li><a asp-controller="Favourite" asp-action="Index"><i class="bi bi-heart"></i> My Favorites</a></li>

                                <li><a asp-controller="Inquiry" asp-action="Index"><i class="bi bi-chat-dots"></i> My Inquiries</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post" style="display: inline;">
                                        <button type="submit" class="dropdown-item" style="background: none; border: none; cursor: pointer; text-align: left; width: 100%; padding: 0.5rem 1rem;">
                                            <i class="bi bi-box-arrow-right"></i> Logout
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>

                        @if (User.IsInRole("Owner"))
                        {
                            <!-- Property Owner Menu -->
                            <li class="dropdown">
                                <a href="#"><span><i class="bi bi-building"></i> My Properties</span> <i class="bi bi-chevron-down toggle-dropdown"></i></a>
                                <ul>
                                    <li><a asp-controller="Property" asp-action="MyProperties"><i class="bi bi-house"></i> View Properties</a></li>
                                    <li><a asp-controller="Property" asp-action="Create"><i class="bi bi-plus-circle"></i> Add Property</a></li>
                                    <li><a asp-controller="Inquiry" asp-action="ReceivedInquiries"><i class="bi bi-envelope"></i> Inquiries</a></li>
                                </ul>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
